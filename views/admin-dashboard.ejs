<!DOCTYPE html>
<html lang="fr-CA">
<head>
    <meta charset="UTF-8">
    <title>FORFEO ADMIN</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background: #0f172a; color: white; padding-top: 50px; }
        .table-custom { background: #1e293b; border-radius: 15px; overflow: hidden; }
    </style>
</head>
<body>
    <div class="container text-center">
        <h1 class="fw-bold mb-5">Contrôle des Candidatures</h1>
        <div class="table-custom p-4 shadow-lg mx-auto" style="max-width: 900px;">
            <table class="table table-dark table-hover mb-0">
                <thead>
                    <tr>
                        <th>Mission</th>
                        <th>Ambassadeur</th>
                        <th>Statut</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (candidatures.length === 0) { %>
                        <tr><td colspan="4" class="py-4 text-muted">Aucune candidature en attente.</td></tr>
                    <% } %>
                    <% candidatures.forEach(c => { %>
                    <tr class="align-middle">
                        <td><%= c.titre %></td>
                        <td><%= c.ambassadeur %></td>
                        <td><span class="badge bg-warning text-dark"><%= c.statut %></span></td>
                        <td>
                            <form action="/admin/approuver" method="POST">
                                <input type="hidden" name="id" value="<%= c.id %>">
                                <button class="btn btn-primary btn-sm rounded-pill px-4">Approuver</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <a href="/logout" class="btn btn-outline-danger mt-5 rounded-pill px-4">Déconnexion sécurisée</a>
    </div>
</body>
</html>

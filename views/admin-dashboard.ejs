<!DOCTYPE html>
<html lang="fr-CA">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FORFEO LAB - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body { background-color: #f1f5f9; font-family: 'Inter', sans-serif; }
        .sidebar { background: #0f172a; min-height: 100vh; color: white; padding-top: 20px; }
        .nav-link { color: #94a3b8; transition: 0.3s; }
        .nav-link:hover, .nav-link.active { color: white; background: rgba(255,255,255,0.1); border-radius: 8px; }
        .stat-card { background: white; border-radius: 16px; padding: 24px; border: 1px solid #e2e8f0; }
        .table-container { background: white; border-radius: 16px; padding: 20px; border: 1px solid #e2e8f0; }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 sidebar d-none d-md-block">
                <div class="px-3 mb-4"><h5 class="fw-bold text-primary">FORFEO ADMIN</h5></div>
                <ul class="nav flex-column px-2">
                    <li class="nav-item mb-2"><a class="nav-link active py-2" href="#"><i class="bi bi-speedometer2 me-2"></i> Dashboard</a></li>
                    <li class="nav-item mb-2"><a class="nav-link py-2" href="#"><i class="bi bi-building me-2"></i> Entreprises</a></li>
                    <li class="nav-item mb-2"><a class="nav-link py-2" href="#"><i class="bi bi-people me-2"></i> Ambassadeurs</a></li>
                    <li class="nav-item mt-4"><a class="nav-link py-2 text-danger" href="/logout"><i class="bi bi-box-arrow-right me-2"></i> Déconnexion</a></li>
                </ul>
            </div>

            <div class="col-md-10 p-4">
                <h2 class="fw-bold mb-4">Vue d'ensemble</h2>
                
                <div class="row g-4 mb-5">
                    <div class="col-md-4">
                        <div class="stat-card">
                            <h6 class="text-muted">Entreprises</h6>
                            <h3 class="fw-bold"><%= entreprises.length %></h3>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card">
                            <h6 class="text-muted">Ambassadeurs</h6>
                            <h3 class="fw-bold"><%= ambassadeurs.length %></h3>
                        </div>
                    </div>
                </div>

                <div class="table-container mb-5">
                    <h5 class="fw-bold mb-3">Dernières Entreprises Inscrites</h5>
                    <table class="table align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Établissement</th>
                                <th>Email</th>
                                <th>Ville</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% entreprises.forEach(ent => { %>
                            <tr>
                                <td class="fw-bold"><%= ent.nom %></td>
                                <td><%= ent.email %></td>
                                <td><%= ent.ville %></td>
                                <td><button class="btn btn-sm btn-outline-primary">Gérer</button></td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>

                <div class="table-container">
                    <h5 class="fw-bold mb-3">Candidatures Ambassadeurs</h5>
                    <table class="table align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Nom</th>
                                <th>Email</th>
                                <th>Ville</th>
                                <th>Statut</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% ambassadeurs.forEach(amb => { %>
                            <tr>
                                <td class="fw-bold"><%= amb.nom %></td>
                                <td><%= amb.email %></td>
                                <td><%= amb.ville %></td>
                                <td><span class="badge bg-warning-subtle text-warning">À valider</span></td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Admin | FORFEO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/premium-dashboard.css">
</head>
<body>
    <div class="premium-bg"></div>
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h3 class="fw-bold">Tableau de Bord Admin</h3>
            <div class="d-flex gap-2">
                <a href="/profil" class="btn btn-outline-primary btn-sm rounded-pill">Profil</a>
                <a href="/logout" class="btn btn-danger btn-sm rounded-pill">DÃ©connexion</a>
            </div>
        </div>

        <ul class="nav nav-pills mb-4 gap-3 p-2 glass-card d-inline-flex" id="adminTabs" role="tablist">
            <li class="nav-item" role="presentation"><button class="nav-link active rounded-pill fw-bold" id="validation-tab" data-bs-toggle="tab" data-bs-target="#validation" type="button">Validation</button></li>
            <li class="nav-item" role="presentation"><button class="nav-link rounded-pill fw-bold" id="paiements-tab" data-bs-toggle="tab" data-bs-target="#paiements" type="button">Paiements</button></li>
            <li class="nav-item" role="presentation"><button class="nav-link rounded-pill fw-bold" id="users-tab" data-bs-toggle="tab" data-bs-target="#users" type="button">Utilisateurs</button></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade show active" id="validation">
                <div class="glass-card">
                    <h5 class="fw-bold mb-3 text-primary">Gestion des Missions</h5>
                    <table class="premium-table">
                        <thead><tr><th>ENTREPRISE</th><th>TITRE</th><th>STATUT</th><th>ACTION</th></tr></thead>
                        <tbody>
                            <% missions.filter(m => m.statut !== 'approuve').forEach(m => { %>
                                <tr>
                                    <td class="fw-bold"><%= m.entreprise_nom %></td>
                                    <td><%= m.titre %></td>
                                    <td><span class="badge-status <%= m.statut %>"><%= m.statut %></span></td>
                                    <td>
                                        <% if (m.statut === 'en_attente') { %>
                                            <form action="/admin/approuver-mission" method="POST"><input type="hidden" name="id_mission" value="<%= m.id %>"><button class="btn btn-sm btn-success rounded-pill px-3">Publier</button></form>
                                        <% } else if (m.statut === 'soumis') { %>
                                            <a href="/admin/rapport/<%= m.id %>" class="btn btn-sm btn-primary rounded-pill px-3">Examiner</a>
                                        <% } else { %> <span class="text-muted small">--</span> <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="tab-pane fade" id="paiements">
                <div class="glass-card bg-success text-white mb-4 p-4">
                    <h5 class="fw-bold text-white mb-2">ðŸ’° Ã€ Payer</h5>
                    <div class="display-4 fw-bold"><%= totalAPayer %> $ CAD</div>
                </div>
                <div class="glass-card border-success">
                    <h5 class="fw-bold mb-3 text-success">Action : Confirmer Virement</h5>
                    <table class="premium-table">
                        <thead><tr><th>Ambassadeur</th><th>Montant</th><th>Action</th></tr></thead>
                        <tbody>
                            <% missions.filter(m => m.statut === 'approuve' && m.statut_paiement !== 'paye').forEach(m => { %>
                                <tr>
                                    <td class="fw-bold"><%= m.ambassadeur_id %></td>
                                    <td class="fw-bold text-success"><%= m.recompense %>$</td>
                                    <td><form action="/admin/payer-ambassadeur" method="POST" onsubmit="return confirm('ConfirmÃ© ?');"><input type="hidden" name="id_mission" value="<%= m.id %>"><button class="btn btn-success btn-sm rounded-pill">Payer</button></form></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="tab-pane fade" id="users">
                <div class="glass-card">
                    <h5 class="fw-bold mb-3">Utilisateurs</h5>
                    <table class="premium-table">
                        <thead><tr><th>NOM</th><th>EMAIL</th><th>RÃ”LE</th></tr></thead>
                        <tbody>
                            <% users.forEach(u => { %><tr><td><%= u.nom %></td><td><%= u.email %></td><td><span class="badge bg-light text-dark border"><%= u.role %></span></td></tr><% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <%- include('partials/forfy') %>
</body>
</html>

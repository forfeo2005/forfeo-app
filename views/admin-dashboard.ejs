<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administration Forfeo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .admin-row:hover { background-color: #f0f7ff !important; cursor: pointer; }
        .table-responsive { border-radius: 15px; overflow: hidden; }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">FORFEO <span class="badge bg-white text-primary">ADMIN</span></a>
            <a href="/logout" class="btn btn-outline-light btn-sm">Quitter</a>
        </div>
    </nav>

    <div class="container py-5">
        <h2 class="fw-bold mb-4 text-dark">Gestion des Entreprises</h2>
        
        <div class="card border-0 shadow-sm rounded-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Entreprise</th>
                            <th>Contact</th>
                            <th class="text-center">Statut</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% entreprises.forEach(ent => { %>
                            <tr class="admin-row">
                                <td class="fw-bold"><%= ent.nom %></td>
                                <td class="text-muted"><%= ent.email %></td>
                                <td class="text-center">
                                    <% if (ent.is_premium) { %>
                                        <span class="badge bg-success-subtle text-success px-3">PREMIUM</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary-subtle text-secondary px-3">Standard</span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>

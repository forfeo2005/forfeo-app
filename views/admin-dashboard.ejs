<!DOCTYPE html>
<html lang="fr-CA">
<head>
    <meta charset="UTF-8">
    <title>FORFEO ADMIN</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>body { background:#0f172a; color:white; padding:40px; }</style>
</head>
<body>
    <div class="container">
        <h1 class="fw-bold mb-5">Panel Admin</h1>

        <div class="row">
            <div class="col-md-6">
                <h4 class="mb-4">Candidatures</h4>
                <div class="bg-dark p-3 rounded">
                    <% candidatures.forEach(c => { %>
                        <div class="d-flex justify-content-between border-bottom py-2">
                            <span><%= c.titre %> (<%= c.ambassadeur %>)</span>
                            <form action="/admin/approuver" method="POST">
                                <input type="hidden" name="id" value="<%= c.id %>">
                                <button class="btn btn-primary btn-sm">Approuver</button>
                            </form>
                        </div>
                    <% }) %>
                </div>
            </div>

            <div class="col-md-6">
                <h4 class="mb-4">Gestion Premium</h4>
                <div class="bg-dark p-3 rounded">
                    <% entreprises.forEach(e => { %>
                        <div class="d-flex justify-content-between border-bottom py-2 align-items-center">
                            <span><%= e.nom %></span>
                            <form action="/admin/set-premium" method="POST">
                                <input type="hidden" name="userId" value="<%= e.id %>">
                                <input type="hidden" name="status" value="<%= !e.is_premium %>">
                                <button class="btn <%= e.is_premium ? 'btn-success' : 'btn-outline-warning' %> btn-sm">
                                    <%= e.is_premium ? 'Actif' : 'Activer Premium' %>
                                </button>
                            </form>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<!DOCTYPE html>
<html lang="fr-CA">
<head>
    <meta charset="UTF-8">
    <title>FORFEO ADMIN</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>body { background: #0f172a; color: white; padding: 50px; }</style>
</head>
<body>
    <div class="container">
        <h1 class="fw-bold mb-5">Contr√¥le des Candidatures</h1>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-dark table-hover rounded-4 overflow-hidden">
                    <thead>
                        <tr>
                            <th>Mission</th>
                            <th>Ambassadeur</th>
                            <th>Statut</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% candidatures.forEach(c => { %>
                        <tr>
                            <td><%= c.titre %></td>
                            <td><%= c.ambassadeur %></td>
                            <td><span class="badge bg-warning"><%= c.statut %></span></td>
                            <td>
                                <form action="/admin/approuver" method="POST">
                                    <input type="hidden" name="id" value="<%= c.id %>">
                                    <button class="btn btn-success btn-sm">Approuver</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>

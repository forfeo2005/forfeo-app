<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Console Admin | FORFEO LAB</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background: #f0f2f5; }
        .sidebar { background: #1a1a1a; min-height: 100vh; color: white; padding: 20px; }
        .card-stat { border: none; border-radius: 15px; box-shadow: 0 4px 10px rgba(0,0,0,0.05); }
        .table-custom { background: white; border-radius: 15px; overflow: hidden; }
    </style>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <nav class="col-md-2 sidebar">
            <h3 class="fw-bold text-primary mb-4">FORFEO ADMIN</h3>
            <hr>
            <p class="small opacity-50">GESTION</p>
            <a href="#" class="nav-link text-white mb-3">Vue d'ensemble</a>
            <a href="/logout" class="nav-link text-danger mt-5">D√©connexion</a>
        </nav>

        <main class="col-md-10 p-5">
            <h2 class="fw-bold mb-4">Tableau de Bord Administrateur üõ°Ô∏è</h2>

            <div class="row mb-5">
                <div class="col-md-4">
                    <div class="card card-stat p-4">
                        <h6 class="text-muted">ENTREPRISES INSCRITES</h6>
                        <h2 class="fw-bold"><%= entreprises.length %></h2>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card card-stat p-4 bg-primary text-white">
                        <h6 class="opacity-75">AUDITS TOTAUX</h6>
                        <h2 class="fw-bold"><%= rapports.length %></h2>
                    </div>
                </div>
            </div>

            <h4 class="fw-bold mb-3">Flux d'Audits Myst√®res au Qu√©bec</h4>
            <div class="table-custom shadow-sm">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Entreprise</th>
                            <th>Mission</th>
                            <th>Statut</th>
                            <th>Ambassadeur</th>
                            <th>Rapport</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white">
                        <% rapports.forEach(r => { %>
                            <tr>
                                <td><strong><%= r.entreprise_nom %></strong></td>
                                <td><%= r.titre %></td>
                                <td>
                                    <span class="badge rounded-pill <%= r.statut === 'termine' ? 'bg-success' : 'bg-warning text-dark' %>">
                                        <%= r.statut %>
                                    </span>
                                </td>
                                <td>ID: <%= r.ambassadeur_id || 'En attente' %></td>
                                <td class="small"><%= r.rapport_final ? r.rapport_final.substring(0, 50) + '...' : 'Pas encore soumis' %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>
</body>
</html>

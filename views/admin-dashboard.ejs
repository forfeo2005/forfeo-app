<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Admin | FORFEO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/premium-dashboard.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="premium-bg"></div>
    <div class="container py-5">
        <div class="d-flex justify-content-between mb-5"><h3 class="fw-bold">Admin</h3><a href="/logout" class="btn btn-danger rounded-pill">Déconnexion</a></div>

        <ul class="nav nav-pills mb-4 gap-3 p-2 glass-card d-inline-flex">
            <li class="nav-item"><button class="nav-link active rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#validation">Validation</button></li>
            <li class="nav-item"><button class="nav-link rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#paiements">Comptabilité</button></li>
            <li class="nav-item"><button class="nav-link rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#users">Utilisateurs</button></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade show active" id="validation">
                <div class="glass-card">
                    <table class="premium-table">
                        <thead><tr><th>Mission</th><th>Statut</th><th>Action</th></tr></thead>
                        <tbody>
                            <% missions.filter(m => m.statut !== 'approuve').forEach(m => { %>
                                <tr>
                                    <td><%= m.titre %></td>
                                    <td><span class="badge bg-secondary"><%= m.statut %></span></td>
                                    <td>
                                        <% if (m.statut === 'soumis') { %> <a href="/admin/rapport/<%= m.id %>" class="btn btn-sm btn-primary rounded-pill">Examiner</a> <% } %>
                                        <% if (m.statut === 'en_attente') { %> <form action="/admin/approuver-mission" method="POST"><input type="hidden" name="id_mission" value="<%= m.id %>"><button class="btn btn-sm btn-success rounded-pill">Publier</button></form> <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="tab-pane fade" id="paiements">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="glass-card bg-white border h-100">
                            <h5 class="fw-bold mb-3">Sommaire (Paiements Effectués)</h5>
                            <div class="d-flex justify-content-between border-bottom py-2"><span>Sous-total</span><span><%= finance.brut %> $</span></div>
                            <div class="d-flex justify-content-between border-bottom py-2"><span>TPS (5%)</span><span><%= finance.tps %> $</span></div>
                            <div class="d-flex justify-content-between border-bottom py-2"><span>TVQ (9.975%)</span><span><%= finance.tvq %> $</span></div>
                            <div class="d-flex justify-content-between py-3"><span class="fw-bold text-success h5">TOTAL</span><span class="fw-bold text-success h5"><%= finance.total %> $</span></div>
                            <a href="/admin/rapport-comptable" class="btn btn-dark w-100 mt-3"><i class="bi bi-file-pdf"></i> Télécharger Rapport PDF</a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="glass-card border-success">
                            <h5 class="fw-bold text-success">À Payer (<%= totalAPayer %> $)</h5>
                            <table class="premium-table">
                                <thead><tr><th>Ambassadeur</th><th>Montant</th><th>Action</th></tr></thead>
                                <tbody>
                                    <% missions.filter(m => m.statut === 'approuve' && m.statut_paiement !== 'paye').forEach(m => { %>
                                        <tr>
                                            <td>#<%= m.ambassadeur_id %></td>
                                            <td class="fw-bold text-success"><%= m.recompense %>$</td>
                                            <td><form action="/admin/payer-ambassadeur" method="POST"><input type="hidden" name="id_mission" value="<%= m.id %>"><button class="btn btn-success btn-sm rounded-pill">Payer</button></form></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="users">
                <div class="glass-card">
                    <h5 class="fw-bold mb-3">Ajouter Utilisateur</h5>
                    <form action="/admin/create-user" method="POST" class="row g-2 mb-4">
                        <div class="col"><input type="text" name="nom" placeholder="Nom" class="form-control" required></div>
                        <div class="col"><input type="email" name="email" placeholder="Email" class="form-control" required></div>
                        <div class="col"><input type="password" name="password" placeholder="Pass" class="form-control" required></div>
                        <div class="col"><select name="role" class="form-select"><option value="entreprise">Entreprise</option><option value="ambassadeur">Ambassadeur</option><option value="employe">Employé</option></select></div>
                        <div class="col"><button class="btn btn-success w-100">Créer</button></div>
                    </form>
                    <table class="premium-table">
                        <thead><tr><th>Nom</th><th>Email</th><th>Rôle</th><th>Action</th></tr></thead>
                        <tbody>
                            <% users.forEach(u => { %>
                                <tr><td><%= u.nom %></td><td><%= u.email %></td><td><%= u.role %></td><td><form action="/admin/delete-user" method="POST"><input type="hidden" name="user_id" value="<%= u.id %>"><button class="btn btn-sm btn-outline-danger">X</button></form></td></tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/forfy') %>
</body>
</html>

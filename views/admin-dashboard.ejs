<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Console Admin | FORFEO LAB</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        :root { --admin-bg: #f1f5f9; --admin-dark: #1e293b; }
        body { background-color: var(--admin-bg); font-family: 'Inter', sans-serif; }
        .admin-navbar { background-color: var(--admin-dark); }
        .card-custom { border: none; border-radius: 15px; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1); }
        .status-badge { padding: 5px 12px; border-radius: 50px; font-size: 0.8rem; font-weight: 600; }
        .btn-approve { background-color: #10b981; color: white; border: none; transition: 0.2s; }
        .btn-approve:hover { background-color: #059669; transform: scale(1.05); }
    </style>
</head>
<body>

    <nav class="navbar admin-navbar navbar-dark py-3">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-bold" href="/">
                <span class="text-primary">FORFEO</span> <span class="text-white-50">ADMIN</span>
            </a>
            <div class="d-flex align-items-center">
                <span class="text-white me-4 small">
                    <i class="bi bi-person-circle"></i> <strong><%= userName %></strong>
                </span>
                <a href="/profil" class="btn btn-outline-light btn-sm rounded-pill me-2 px-3">
                    Profil & Sécurité
                </a>
                <a href="/logout" class="btn btn-danger btn-sm rounded-pill px-3">
                    Déconnexion
                </a>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-5 px-4">
        
        <div class="row mb-5">
            <div class="col-12">
                <div class="card card-custom p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="fw-bold mb-0">Validation des Rapports d'Audits</h4>
                        <span class="badge bg-primary rounded-pill"><%= missions.length %> missions au total</span>
                    </div>
                    
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr class="small text-muted text-uppercase">
                                    <th>Entreprise</th>
                                    <th>Titre de la Mission</th>
                                    <th>Type d'Audit</th>
                                    <th>Statut</th>
                                    <th class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% missions.forEach(m => { %>
                                    <tr>
                                        <td class="fw-bold"><%= m.entreprise_nom %></td>
                                        <td><%= m.titre %></td>
                                        <td class="small text-muted"><%= m.type_audit || 'Audit Standard' %></td>
                                        <td>
                                            <% if (m.statut === 'actif') { %>
                                                <span class="status-badge bg-success-subtle text-success">Actif / Publié</span>
                                            <% } else if (m.statut === 'reserve') { %>
                                                <span class="status-badge bg-info-subtle text-info">Réservé par Ambassadeur</span>
                                            <% } else { %>
                                                <span class="status-badge bg-warning-subtle text-warning">En attente d'approbation</span>
                                            <% } %>
                                        </td>
                                        <td class="text-end">
                                            <% if (m.statut !== 'actif') { %>
                                                <form action="/admin/approuver-mission" method="POST" style="display:inline;">
                                                    <input type="hidden" name="id_mission" value="<%= m.id %>">
                                                    <button type="submit" class="btn btn-sm btn-approve rounded-pill px-4 fw-bold">
                                                        Approuver
                                                    </button>
                                                </form>
                                            <% } else { %>
                                                <span class="text-success fw-bold small"><i class="bi bi-check-all fs-5"></i> Publié</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card card-custom p-4">
                    <h4 class="fw-bold mb-4">Base Utilisateurs Forfeo</h4>
                    <div class="table-responsive">
                        <table class="table table-sm align-middle">
                            <thead>
                                <tr class="small text-muted">
                                    <th>Nom / Entreprise</th>
                                    <th>Email</th>
                                    <th>Rôle</th>
                                    <th>Forfait</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(u => { %>
                                    <tr>
                                        <td class="fw-bold"><%= u.nom %></td>
                                        <td><%= u.email %></td>
                                        <td><span class="badge bg-light text-dark border"><%= u.role %></span></td>
                                        <td class="small"><%= u.forfait || 'Freemium' %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Direction FORFEO | Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f8f9fa; }
        .admin-card { border-radius: 15px; border: none; box-shadow: 0 5px 15px rgba(0,0,0,0.05); background: white; }
        .status-badge { font-size: 0.75rem; padding: 5px 12px; border-radius: 50px; font-weight: bold; }
        .bg-premium-light { background-color: #e3f2fd; color: #0d6efd; }
        .report-card { border-left: 5px solid #0d6efd; position: relative; }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container">
            <span class="navbar-brand fw-bold">FORFEO <span class="text-primary">ADMIN</span></span>
            <a href="/logout" class="btn btn-outline-light btn-sm">Déconnexion</a>
        </div>
    </nav>

    <div class="container py-4">
        <div class="row g-4">
            <div class="col-lg-7">
                <div class="card admin-card p-4">
                    <h5 class="fw-bold mb-4">Entreprises</h5>
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead><tr><th>Nom</th><th>Statut</th><th class="text-end">Action</th></tr></thead>
                            <tbody>
                                <% entreprises.forEach(ent => { %>
                                    <tr>
                                        <td class="fw-bold"><%= ent.nom %></td>
                                        <td><span class="status-badge <%= ent.is_premium ? 'bg-premium-light' : 'bg-light' %>"><%= ent.is_premium ? 'Premium' : 'Standard' %></span></td>
                                        <td class="text-end">
                                            <form action="/admin/supprimer-entreprise" method="POST" onsubmit="return confirm('Supprimer cet utilisateur ?');">
                                                <input type="hidden" name="id" value="<%= ent.id %>">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">Supprimer</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="card admin-card p-4">
                    <h5 class="fw-bold mb-4">Derniers Audits</h5>
                    <% rapports.forEach(rep => { %>
                        <div class="report-card p-3 mb-3 shadow-sm rounded-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <div><h6 class="fw-bold m-0"><%= rep.titre %></h6><small class="text-primary fw-bold"><%= rep.entreprise_nom %></small></div>
                                <form action="/admin/supprimer-rapport" method="POST" onsubmit="return confirm('Effacer ce rapport ?');">
                                    <input type="hidden" name="id_mission" value="<%= rep.id %>">
                                    <button type="submit" class="btn btn-sm text-danger border-0">✕</button>
                                </form>
                            </div>
                            <p class="small text-muted mt-2">"<%= rep.rapport_ambassadeur %>"</p>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

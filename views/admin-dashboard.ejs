<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Console Admin | FORFEO LAB</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body { background-color: #f1f5f9; font-family: 'Inter', sans-serif; }
        .admin-card { border: none; border-radius: 15px; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1); }
        .navbar-admin { background-color: #1e293b; }
    </style>
</head>
<body>
    <nav class="navbar navbar-admin navbar-dark py-3 mb-4">
        <div class="container-fluid px-4">
            <span class="navbar-brand fw-bold">ADMIN <span class="text-primary">CONSOLE</span></span>
            <div class="d-flex align-items-center">
                <span class="text-white me-3 small">Connecté : <strong><%= userName %></strong></span>
                <a href="/profil" class="btn btn-outline-light btn-sm rounded-pill me-2">Profil & Pass</a>
                <a href="/logout" class="btn btn-danger btn-sm rounded-pill">Déconnexion</a>
            </div>
        </div>
    </nav>

    <div class="container-fluid px-4">
        <h2 class="fw-bold mb-4">Gestion des Rapports d'Audits</h2>
        
        <div class="card admin-card p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Entreprise</th>
                            <th>Mission</th>
                            <th>Statut Actuel</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% missions.forEach(m => { %>
                            <tr>
                                <td class="fw-bold"><%= m.entreprise_nom %></td>
                                <td><%= m.titre %></td>
                                <td>
                                    <span class="badge rounded-pill <%= m.statut === 'actif' ? 'bg-success' : 'bg-warning text-dark' %>">
                                        <%= m.statut %>
                                    </span>
                                </td>
                                <td class="text-end">
                                    <% if (m.statut !== 'actif') { %>
                                        <form action="/admin/approuver-mission" method="POST" style="display:inline;">
                                            <input type="hidden" name="id_mission" value="<%= m.id %>">
                                            <button type="submit" class="btn btn-success btn-sm rounded-pill px-3">
                                                Approuver
                                            </button>
                                        </form>
                                    <% } else { %>
                                        <i class="bi bi-check-circle-fill text-success fs-5"></i>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <h2 class="fw-bold mt-5 mb-4">Utilisateurs</h2>
        <div class="card admin-card p-4 mb-5">
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead><tr><th>Nom</th><th>Email</th><th>Rôle</th></tr></thead>
                    <tbody>
                        <% users.forEach(u => { %>
                            <tr>
                                <td><%= u.nom %></td>
                                <td><%= u.email %></td>
                                <td><span class="badge bg-light text-dark border"><%= u.role %></span></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>

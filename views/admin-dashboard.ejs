<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Console Admin üõ°Ô∏è | FORFEO LAB</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        :root { --glass: rgba(255, 255, 255, 0.9); --primary-gradient: linear-gradient(135deg, #0d6efd 0%, #6610f2 100%); }
        body { background: #f0f2f5; font-family: 'Inter', sans-serif; color: #1e293b; }
        .sidebar { background: #0f172a; min-height: 100vh; color: white; padding: 2rem 1.5rem; }
        .stat-card { background: white; border: none; border-radius: 1.5rem; box-shadow: 0 10px 30px rgba(0,0,0,0.05); transition: 0.3s; }
        .stat-card:hover { transform: translateY(-5px); }
        .table-container { background: white; border-radius: 1.5rem; padding: 2rem; box-shadow: 0 20px 40px rgba(0,0,0,0.05); }
        .status-badge { padding: 0.5rem 1rem; border-radius: 50px; font-weight: 700; font-size: 0.75rem; }
        .bg-approuve { background: #dcfce7; color: #166534; }
        .bg-termine { background: #e0f2fe; color: #075985; }
        .bg-reserve { background: #fef9c3; color: #854d0e; }
    </style>
</head>
<body>

<div class="container-fluid">
    <div class="row">
        <nav class="col-md-2 sidebar d-none d-md-block">
            <h4 class="fw-bold mb-5"><i class="bi bi-shield-lock me-2"></i>FORFEO <span class="text-primary">ADMIN</span></h4>
            <ul class="nav flex-column gap-3">
                <li class="nav-item"><a href="/admin/dashboard" class="nav-link text-white fw-bold"><i class="bi bi-grid-1x2-fill me-2"></i> Dashboard</a></li>
                <li class="nav-item"><a href="/logout" class="nav-link text-danger mt-5"><i class="bi bi-power me-2"></i> D√©connexion</a></li>
            </ul>
        </nav>

        <main class="col-md-10 p-5">
            <div class="d-flex justify-content-between align-items-center mb-5">
                <h2 class="fw-bold">Analyse Globale du R√©seau üìä</h2>
                <div class="badge bg-white text-dark shadow-sm p-3 rounded-pill fw-bold">Connect√© : <%= userName %></div>
            </div>

            <div class="row g-4 mb-5">
                <div class="col-lg-8">
                    <div class="stat-card p-4">
                        <h5 class="fw-bold mb-4">Croissance des Revenus ($ CAD)</h5>
                        <canvas id="revenueChart" height="250"></canvas>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="row g-4">
                        <div class="col-12">
                            <div class="stat-card p-4 text-center border-bottom border-primary border-5">
                                <h6 class="text-muted small fw-bold">ENTREPRISES PARTENAIRES</h6>
                                <h2 class="fw-bold m-0"><%= entreprises.length %></h2>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="stat-card p-4 text-center border-bottom border-info border-5">
                                <h6 class="text-muted small fw-bold">AUDITS EN COURS</h6>
                                <h2 class="fw-bold m-0"><%= rapports.filter(r => r.statut === 'termine').length %></h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-container">
                <h5 class="fw-bold mb-4">Flux des Rapports Terrain</h5>
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead class="text-muted small">
                            <tr><th>ENTREPRISE</th><th>MISSION</th><th>STATUT</th><th>PREUVE</th><th class="text-end">ACTION</th></tr>
                        </thead>
                        <tbody>
                            <% rapports.forEach(r => { %>
                                <tr>
                                    <td><strong><%= r.entreprise_nom %></strong></td>
                                    <td class="text-muted"><%= r.titre %></td>
                                    <td><span class="status-badge bg-<%= r.statut %>"><%= r.statut.toUpperCase() %></span></td>
                                    <td>
                                        <% if(r.photo_preuve) { %>
                                            <a href="<%= r.photo_preuve %>" target="_blank" class="btn btn-sm btn-outline-info rounded-pill">Voir Photo</a>
                                        <% } else { %><span class="small text-muted italic">N/A</span><% } %>
                                    </td>
                                    <td class="text-end">
                                        <% if(r.statut === 'termine') { %>
                                            <form action="/admin/approuver-audit" method="POST">
                                                <input type="hidden" name="id_mission" value="<%= r.id %>">
                                                <button class="btn btn-primary btn-sm rounded-pill fw-bold px-4 shadow-sm">Approuver & Payer</button>
                                            </form>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
</div>

<script>
    const ctx = document.getElementById('revenueChart').getContext('2d');
    new Chart(ctx, {
        type: 'line',
        data: {
            labels: <%- JSON.stringify(chartData.map(d => d.mois)) %>,
            datasets: [{
                label: 'Revenus Mensuels ($)',
                data: <%- JSON.stringify(chartData.map(d => d.total)) %>,
                borderColor: '#0d6efd',
                backgroundColor: 'rgba(13, 110, 253, 0.1)',
                fill: true,
                tension: 0.4,
                pointRadius: 6,
                pointBackgroundColor: '#fff',
                pointBorderColor: '#0d6efd'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { display: false } },
            scales: { y: { beginAtZero: true, grid: { display: false } }, x: { grid: { display: false } } }
        }
    });
</script>
</body>
</html>

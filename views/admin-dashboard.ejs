<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Admin | FORFEO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/premium-dashboard.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="premium-bg"></div>
    <div class="container py-5">
        <div class="d-flex justify-content-between mb-5 align-items-center">
            <h3 class="fw-bold text-primary">Bienvenue Admin üëã</h3>
            <div class="d-flex gap-2">
                <a href="/profil" class="btn btn-outline-primary btn-sm rounded-pill">Profil</a>
                <a href="/logout" class="btn btn-danger btn-sm rounded-pill">D√©connexion</a>
            </div>
        </div>

        <ul class="nav nav-pills mb-4 gap-3 p-2 glass-card d-inline-flex" role="tablist">
            <li class="nav-item"><button class="nav-link active rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#paiements">Comptabilit√©</button></li>
            <li class="nav-item"><button class="nav-link rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#validation">Validation</button></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade show active" id="paiements">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="glass-card bg-white border h-100">
                            <h5 class="fw-bold mb-3">Comptabilit√© (Pay√©s)</h5>
                            <div class="d-flex justify-content-between border-bottom py-2"><span>Sous-total</span><span><%= finance.brut %> $</span></div>
                            <div class="d-flex justify-content-between border-bottom py-2"><span>TPS (5%)</span><span><%= finance.tps %> $</span></div>
                            <div class="d-flex justify-content-between border-bottom py-2"><span>TVQ (9.975%)</span><span><%= finance.tvq %> $</span></div>
                            <div class="d-flex justify-content-between py-3 fw-bold text-success h5"><span>TOTAL</span><span><%= finance.total %> $</span></div>
                            <a href="/admin/rapport-comptable" class="btn btn-dark w-100 mt-3">T√©l√©charger PDF</a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="glass-card border-success">
                            <h5 class="fw-bold text-success mb-3">Paiements en attente (<%= totalAPayer %> $)</h5>
                            <table class="premium-table">
                                <thead><tr><th>Ambassadeur</th><th>Action</th></tr></thead>
                                <tbody>
                                    <% missions.filter(m => m.statut === 'approuve' && m.statut_paiement !== 'paye').forEach(m => { %>
                                        <tr><td>#<%= m.ambassadeur_id %> (<%= m.recompense %>$)</td><td><form action="/admin/payer-ambassadeur" method="POST"><input type="hidden" name="id_mission" value="<%= m.id %>"><button class="btn btn-success btn-sm">Confirmer Pay√©</button></form></td></tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="tab-pane fade" id="validation">
                <div class="glass-card">
                    <table class="premium-table">
                        <thead><tr><th>Mission</th><th>Statut</th><th>Action</th></tr></thead>
                        <tbody>
                            <% missions.filter(m => m.statut !== 'approuve').forEach(m => { %>
                                <tr>
                                    <td><%= m.titre %></td>
                                    <td><span class="badge bg-secondary"><%= m.statut %></span></td>
                                    <td>
                                        <% if (m.statut === 'soumis') { %> <a href="/admin/rapport/<%= m.id %>" class="btn btn-sm btn-primary rounded-pill">Examiner</a> <% } %>
                                        <% if (m.statut === 'en_attente') { %> <form action="/admin/approuver-mission" method="POST"><input type="hidden" name="id_mission" value="<%= m.id %>"><button class="btn btn-sm btn-success rounded-pill">Publier</button></form> <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/forfy') %>
</body>
</html>

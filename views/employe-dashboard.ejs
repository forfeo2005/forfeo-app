                            <% } else { %>
                                <a href="/formations/module/<%= m.id %>" class="btn btn-primary w-100 btn-sm rounded-pill">Commencer (15 Questions)</a>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>

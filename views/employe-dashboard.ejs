            </div>
        </div>

        <h4 class="fw-bold mb-4">Catalogue de formations</h4>
        <div class="row g-4">
            <% modules.forEach(m => { 
               const score = scores.find(s => s.module_id === m.id); 
               const reussi = score && score.statut === 'reussi';
            %>
                <div class="col-md-4">
                    <div class="glass-card h-100">
                        <div class="module-header-art mb-3" style="height: 120px;">
                            <div class="module-content-art">
                                <i class="bi <%= m.image_icon %> fs-1"></i>
                            </div>
                        </div>
                        <h5 class="fw-bold"><%= m.titre %></h5>
                        <p class="small text-muted"><%= m.description %></p>
                        <div class="mt-3">
                            <% if(reussi) { %>
                                <div class="alert alert-success py-1 small text-center mb-2">Note : <%= Math.round((score.meilleur_score/15)*100) %>%</div>
                                <a href="/certificat/<%= score.code_verif %>" target="_blank" class="btn btn-success w-100 btn-sm rounded-pill">
                                    <i class="bi bi-award"></i> TÃ©lÃ©charger Certificat

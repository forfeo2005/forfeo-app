<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Académie | FORFEO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/premium-dashboard.css">
</head>
<body>
    <div class="premium-bg"></div>
    <div class="container py-5">
        <div class="d-flex justify-content-between mb-5 align-items-center">
            <h3 class="fw-bold">Bonjour, <%= userName %></h3>
            <div class="d-flex flex-column align-items-center">
                <img src="/images/logo-forfeo.png" height="40">
                <span class="brand-lab-neon">LAB</span>
            </div>
            <a href="/logout" class="btn btn-danger btn-sm rounded-pill">Déconnexion</a>
        </div>

        <h4 class="fw-bold mb-4">Formations</h4>
        <div class="row g-4">
            <% modules.forEach(m => { %>
                <div class="col-md-4">
                    <div class="glass-card h-100">
                        <h5 class="fw-bold"><%= m.titre %></h5>
                        <p class="small text-muted"><%= m.description %></p>
                        <a href="/formations/module/<%= m.id %>" class="btn btn-primary w-100 btn-sm rounded-pill">Commencer</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <%- include('partials/forfy') %>
</body>
</html>

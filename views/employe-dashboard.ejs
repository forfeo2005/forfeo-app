                    <span class="text-primary fw-bold"><i class="bi bi-award"></i> Certificats obtenus : 0</span>
                </div>
            </div>
        </div>

        <div class="row g-4 justify-content-center">
            <% if (modules.length === 0) { %>
                <div class="col-12 text-center py-5">
                    <i class="bi bi-journal-x fs-1 text-muted"></i>
                    <p class="mt-3 text-muted">Aucun module de formation n'est assign√© pour le moment.</p>
                </div>
            <% } else { %>
                <% modules.forEach(m => { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 course-card p-4 shadow-sm">
                            <div class="icon-circle">
                                <i class="bi bi-shield-check"></i>
                            </div>
                            <h4 class="fw-bold text-center mb-3"><%= m.titre %></h4>

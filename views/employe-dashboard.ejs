                                    <span>Progression</span>
                                    <span>0%</span>
                                </div>
                                <div class="progress mb-4" style="height: 8px; border-radius: 10px;">
                                    <div class="progress-bar" style="width: 0%"></div>
                                </div>
                                <a href="/formations/module/<%= m.id %>" class="btn btn-primary btn-start w-100 shadow">
                                    D√©marrer le module
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>

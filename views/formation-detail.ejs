<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Quiz | FORFEO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/premium-dashboard.css">
</head>
<body>
    <div class="premium-bg"></div>
    <div class="container py-5" style="max-width: 800px;">
        <a href="/employe/dashboard" class="btn btn-outline-secondary btn-sm mb-4">‚Üê Retour</a>
        <div class="glass-card p-5">
            <h3 class="fw-bold mb-2 text-primary"><%= module.titre %></h3>
            <p class="text-muted mb-5"><%= module.description %></p>
            <form action="/formations/soumettre-quizz" method="POST">
                <input type="hidden" name="module_id" value="<%= module.id %>">
                <% questions.forEach((q, index) => { %>
                    <div class="mb-5 p-4 bg-light rounded-4 shadow-sm border border-white">
                        <h6 class="fw-bold text-primary mb-3">Question <%= index + 1 %></h6>
                        <div class="alert alert-info py-2 small fst-italic mb-3"><%= q.mise_en_situation %></div>
                        <p class="fw-bold mb-4 fs-5"><%= q.question %></p>
                        <div class="form-check mb-3"><input class="form-check-input" type="radio" name="q_<%= q.id %>" value="A" required><label class="form-check-label"><%= q.option_a %></label></div>
                        <div class="form-check mb-3"><input class="form-check-input" type="radio" name="q_<%= q.id %>" value="B"><label class="form-check-label"><%= q.option_b %></label></div>
                        <div class="form-check mb-3"><input class="form-check-input" type="radio" name="q_<%= q.id %>" value="C"><label class="form-check-label"><%= q.option_c %></label></div>
                    </div>
                <% }) %>
                <button type="submit" class="btn btn-primary w-100 rounded-pill py-3 fw-bold shadow-lg">Soumettre le quizz</button>
            </form>
        </div>
    </div>
    <%- include('partials/forfy') %>
</body>
</html>

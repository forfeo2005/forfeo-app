<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tableau de bord | Forfeo Business</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body { font-family: 'Segoe UI', sans-serif; background-color: #f9f9f9; color: #333; margin: 0; padding: 0; }
        .container { max-width: 1100px; margin: 50px auto; background: white; padding: 40px; border-radius: 15px; box-shadow: 0 5px 20px rgba(0,0,0,0.05); }
        
        /* Header section */
        header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 40px; padding-bottom: 20px; border-bottom: 1px solid #eee; }
        .nav-links a { margin-left: 20px; text-decoration: none; color: #666; font-weight: 500; }
        .btn-logout { background: #ccc; color: #333; padding: 8px 15px; border-radius: 5px; text-decoration: none; font-size: 14px; }

        /* Stats Cards */
        .stats-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px; margin-bottom: 40px; }
        .stat-card { background: #fdfdfd; border: 1px solid #eee; padding: 25px; border-radius: 12px; text-align: center; }
        .stat-card h3 { margin: 0; font-size: 14px; color: #888; text-transform: uppercase; }
        .stat-card p { margin: 10px 0 0; font-size: 32px; font-weight: bold; color: #000; }

        /* Action Grid (Boutons Audit) */
        .grid-actions { display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px; margin-bottom: 50px; }
        .action-card { border: 1px solid #eee; padding: 30px; border-radius: 12px; text-align: center; transition: 0.3s; }
        .action-card:hover { transform: translateY(-5px); box-shadow: 0 8px 25px rgba(0,0,0,0.05); }
        .action-card h3 { margin-bottom: 10px; }
        .btn-link { color: #00aaff; text-decoration: none; font-weight: bold; }

        /* Missions Table */
        .section-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; }
        .btn-buy { background: #000; color: #fff; padding: 12px 25px; border-radius: 8px; border: none; font-weight: bold; cursor: pointer; }
        table { width: 100%; border-collapse: collapse; margin-top: 10px; }
        th { text-align: left; padding: 15px; border-bottom: 2px solid #eee; color: #888; font-size: 13px; }
        td { padding: 15px; border-bottom: 1px solid #eee; font-size: 14px; }
        .status-pill { background: #e8f5e9; color: #2e7d32; padding: 5px 10px; border-radius: 5px; font-size: 12px; font-weight: bold; }
    </style>
</head>
<body>

    <div class="container">
        <header>
            <h1 style="margin:0;">Bienvenue, <%= user.nom %></h1>
            <div class="nav-links">
                <a href="/business-plans">Nos Offres</a>
                <a href="/candidature" style="color:#00aaff;">ðŸš€ Espace Ambassadeur</a>
                <a href="/" class="btn-logout">DÃ©connexion</a>
            </div>
        </header>

        <div class="stats-grid">
            <div class="stat-card">
                <h3>Score Forfeo</h3>
                <p><%= user.score %>/10</p>
            </div>
            <div class="stat-card">
                <h3>Missions Disponibles</h3>
                <p><%= user.missions_dispo %></p>
            </div>
            <div class="stat-card">
                <h3>Plan Actuel</h3>
                <p style="font-size: 24px;"><%= user.plan %></p>
            </div>
        </div>

        <div class="grid-actions">
            <div class="action-card">
                <h3>Ã‰valuer</h3>
                <p style="color:#666; font-size:14px;">Analysez objectivement la qualitÃ© des services.</p>
                <a href="/survey-qualite" class="btn-link">Commencer â†’</a>
            </div>
            <div class="action-card">
                <h3>Documenter</h3>
                <p style="color:#666; font-size:14px;">Remplissez des rapports dÃ©taillÃ©s.</p>
                <a href="/survey-experience" class="btn-link">RÃ©diger â†’</a>
            </div>
            <div class="action-card">
                <h3>AmÃ©liorer</h3>
                <p style="color:#666; font-size:14px;">Vos retours impactent l'excellence.</p>
                <a href="/survey-satisfaction" class="btn-link">Optimiser â†’</a>
            </div>
        </div>

        <div class="section-header">
            <h2 style="margin:0;">Mes Missions d'Audit</h2>
            <button id="checkout-button" class="btn-buy">+ Nouvelle Mission (150$)</button>
        </div>

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Type de Mission</th>
                    <th>Date</th>
                    <th>Statut</th>
                </tr>
            </thead>
            <tbody>
                <% if (missions && missions.length > 0) { %>
                    <% missions.forEach(mission => { %>
                        <tr>
                            <td>#<%= mission.id %></td>
                            <td><%= mission.type_mission %></td>
                            <td><%= new Date(mission.date_creation).toLocaleDateString('fr-CA') %></td>
                            <td><span class="status-pill"><%= mission.statut %></span></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" style="text-align:center; padding:30px; color:#999;">Aucune mission pour le moment.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <%- include('partials/forfy') %>

    <script src="https://js.stripe.com/v3/"></script>
    <script>
        const stripe = Stripe('votre_cle_publique_stripe_ici'); // Remplacez par votre clÃ© publique Stripe
        const checkoutButton = document.getElementById('checkout-button');

        checkoutButton.addEventListener('click', function () {
            fetch('/create-checkout-session', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ userId: '<%= user.id %>' })
            })
            .then(response => response.json())
            .then(session => {
                if (session.id) {
                    return stripe.redirectToCheckout({ sessionId: session.id });
                }
            })
            .catch(error => console.error('Erreur Stripe:', error));
        });
    </script>
</body>
</html>

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Ambassadeur | FORFEO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/premium-dashboard.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="premium-bg"></div>
    <div class="container py-5">
        
        <div class="d-flex justify-content-between align-items-center mb-5 flex-wrap gap-3">
            <h3 class="fw-bold mb-0">Bonjour, <%= userName %></h3>
            <div class="d-flex flex-column align-items-center">
                <img src="/images/logo-forfeo.png" height="40" alt="Logo">
                <span class="brand-lab-neon" style="color:#0061ff; font-weight:900; font-size:12px;">LAB</span>
            </div>
            <div class="d-flex gap-2">
                <a href="/profil" class="btn btn-outline-primary btn-sm rounded-pill">Profil</a>
                <a href="/logout" class="btn btn-danger btn-sm rounded-pill">D√©connexion</a>
            </div>
        </div>

        <ul class="nav nav-pills mb-4 gap-3 p-2 glass-card d-inline-flex flex-wrap" role="tablist">
            <li class="nav-item"><button class="nav-link active rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#missions">Missions Disponibles</button></li>
            <li class="nav-item"><button class="nav-link rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#encours">Missions en Cours</button></li>
            <li class="nav-item"><button class="nav-link rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#soumis">Rapports Soumis</button></li>
        </ul>

        <div class="tab-content">
            
            <div class="tab-pane fade show active" id="missions">
                <div class="glass-card mb-4">
                    <h4 class="fw-bold mb-4">üìç Missions √† saisir</h4>
                    <div class="row g-4">
                        <% if(missions.length > 0) { %>
                            <% missions.forEach(m => { %>
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 border-0 shadow-sm p-3 mission-card">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <span class="badge bg-primary rounded-pill"><%= m.type_audit %></span>
                                            <span class="fw-bold text-success"><%= m.recompense %></span>
                                        </div>
                                        <h5 class="fw-bold"><%= m.titre %></h5>
                                        <p class="text-muted small mb-2"><i class="bi bi-geo-alt-fill me-1"></i><%= m.adresse || '√Ä distance' %></p>
                                        
                                        <div class="alert alert-light border py-2 px-3 mb-3 small text-muted">
                                            <div class="d-flex justify-content-between mb-1">
                                                <span><i class="bi bi-calendar-check me-1"></i>Publi√© :</span>
                                                <span class="fw-bold"><%= new Date(m.created_at).toLocaleDateString('fr-FR') %></span>
                                            </div>
                                            <div class="d-flex justify-content-between text-danger">
                                                <span><i class="bi bi-hourglass-split me-1"></i>Expire :</span>
                                                <span class="fw-bold">
                                                    <% if (m.date_expiration) { %>
                                                        <%= new Date(m.date_expiration).toLocaleDateString('fr-FR') %>
                                                    <% } else { %>
                                                        <%= new Date(new Date(m.created_at).getTime() + 30*24*60*60*1000).toLocaleDateString('fr-FR') %>
                                                    <% } %>
                                                </span>
                                            </div>
                                        </div>

                                        <form action="/ambassadeur/postuler" method="POST" class="mt-auto">
                                            <input type="hidden" name="id_mission" value="<%= m.id %>">
                                            <button class="btn btn-primary w-100 rounded-pill fw-bold">Postuler</button>
                                        </form>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="col-12 text-center py-5 text-muted">Aucune mission disponible pour le moment.</div>
                        <% } %>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="encours">
                <div class="glass-card">
                    <h4 class="fw-bold mb-4">üìù Missions √† compl√©ter</h4>
                    <% const missionsReservees = historique.filter(h => h.statut === 'reserve'); %>
                    <% if(missionsReservees.length > 0) { %>
                        <% missionsReservees.forEach(h => { %>
                            <div class="card border-0 shadow-sm mb-3 p-3">
                                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                                    <div>
                                        <h5 class="fw-bold mb-1"><%= h.titre %></h5>
                                        <span class="badge bg-warning text-dark">√Ä compl√©ter</span>
                                        <small class="text-muted d-block mt-1">Type: <%= h.type_audit %></small>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <% if(h.type_audit.includes('Sondage')) { %>
                                            <a href="mailto:<%= h.client_email %>?subject=Sondage Satisfaction&body=Bonjour..." class="btn btn-info text-white rounded-pill shadow-sm fw-bold">
                                                <i class="bi bi-envelope-fill me-2"></i>Contacter Client
                                            </a>
                                        <% } %>
                                        <button class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold" data-bs-toggle="modal" data-bs-target="#modalFull<%= h.id %>">
                                            <i class="bi bi-pencil-square me-2"></i>Remplir Rapport
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="modal fade" id="modalFull<%= h.id %>" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content border-0 rounded-4 shadow-lg">
                                        <div class="modal-header bg-primary text-white">
                                            <h5 class="modal-title fw-bold">Rapport : <%= h.titre %></h5>
                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body p-4 bg-light">
                                            <form action="/ambassadeur/soumettre-rapport" method="POST">
                                                <input type="hidden" name="mission_id" value="<%= h.id %>">
                                                
                                                <div class="mb-3">
                                                    <label class="form-label fw-bold">Note Globale /10</label>
                                                    <input type="number" name="note" class="form-control" min="0" max="10" required>
                                                </div>
                                                
                                                <div class="mb-3">
                                                    <label class="form-label fw-bold">Commentaire d√©taill√©</label>
                                                    <textarea name="commentaire" class="form-control" rows="4" required placeholder="D√©crivez votre exp√©rience..."></textarea>
                                                </div>

                                                <div class="form-check mb-4">
                                                    <input type="checkbox" class="form-check-input" required>
                                                    <label class="form-check-label small">Je certifie l'exactitude de ces informations.</label>
                                                </div>

                                                <button class="btn btn-success w-100 fw-bold">Envoyer le rapport</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-muted text-center py-4">Aucune mission en cours.</p>
                    <% } %>
                </div>
            </div>

            <div class="tab-pane fade" id="soumis">
                <div class="glass-card">
                    <h4 class="fw-bold mb-4">‚úÖ Mes Rapports Soumis</h4>
                    <div class="table-responsive">
                        <table class="premium-table">
                            <thead><tr><th>Mission</th><th>Soumis le</th><th>R√©mun√©ration</th><th>Statut</th></tr></thead>
                            <tbody>
                                <% 
                                    // On filtre pour n'afficher que ce qui est termin√© ou en attente de validation
                                    const rapportsSoumis = historique.filter(h => h.statut === 'soumis' || h.statut === 'approuve' || h.statut === 'paye');
                                %>
                                <% if(rapportsSoumis.length > 0) { %>
                                    <% rapportsSoumis.forEach(h => { %>
                                        <tr>
                                            <td class="fw-bold"><%= h.titre %></td>
                                            <td>
                                                <% if(h.date_soumission) { %>
                                                    <%= new Date(h.date_soumission).toLocaleDateString('fr-FR') %>
                                                <% } else { %>
                                                    <span class="text-muted">-</span>
                                                <% } %>
                                            </td>
                                            <td class="fw-bold text-success"><%= h.recompense %></td>
                                            <td>
                                                <% if(h.statut_paiement === 'paye') { %>
                                                    <span class="badge bg-success">Pay√© üí∞</span>
                                                <% } else if(h.statut === 'approuve') { %>
                                                    <span class="badge bg-info text-dark">Approuv√© üëç</span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">En attente admin ‚è≥</span>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr><td colspan="4" class="text-center text-muted py-3">Aucun rapport soumis pour l'instant.</td></tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <%- include('partials/forfy') %>
</body>
</html>

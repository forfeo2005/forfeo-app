<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Ambassadeur | FORFEO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/premium-dashboard.css">
</head>
<body>
    <div class="premium-bg"></div>
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h3 class="fw-bold">Bonjour, <%= userName %> üëã</h3>
            <div class="d-flex gap-2">
                <a href="/profil" class="btn btn-outline-primary btn-sm rounded-pill">Mon Profil</a>
                <a href="/logout" class="btn btn-danger btn-sm rounded-pill">D√©connexion</a>
            </div>
        </div>

        <div class="glass-card bg-primary text-white mb-5 p-4" style="background: linear-gradient(135deg, #0061ff, #3b82f6);">
            <div class="opacity-75 small fw-bold uppercase mb-1">Mes Gains Totaux</div>
            <div class="display-3 fw-bold"><%= totalGains %> $ CAD</div>
        </div>

        <h4 class="fw-bold mb-4">Missions disponibles au Qu√©bec</h4>
        <div class="row g-4 mb-5">
            <% if(missions.length === 0) { %><div class="col-12 text-muted">Aucune mission pour le moment.</div><% } %>
            <% missions.forEach(m => { %>
                <div class="col-md-4">
                    <div class="glass-card h-100">
                        <div class="d-flex justify-content-between mb-3">
                            <span class="badge bg-primary-subtle text-primary"><%= m.type_audit %></span>
                            <span class="fw-bold text-success"><%= m.recompense %>$</span>
                        </div>
                        <h5 class="fw-bold"><%= m.titre %></h5>
                        <p class="small text-muted"><%= m.description %></p>
                        <form action="/ambassadeur/postuler" method="POST">
                            <input type="hidden" name="id_mission" value="<%= m.id %>">
                            <button class="btn btn-primary w-100 rounded-pill">R√©server</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
        
        <div class="glass-card">
            <h5 class="fw-bold mb-4">Historique de mes missions</h5>
            <table class="premium-table">
                <thead><tr><th>Mission</th><th>Statut</th><th>Action</th></tr></thead>
                <tbody>
                    <% historique.forEach(h => { %>
                        <tr>
                            <td class="fw-bold"><%= h.titre %></td>
                            <td><span class="badge-status <%= h.statut %>"><%= h.statut %></span></td>
                            <td>
                                <% if(h.statut === 'reserve') { %>
                                    <button class="btn btn-sm btn-primary rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#auditModal<%= h.id %>">
                                        Remplir Rapport
                                    </button>
                                    
                                    <div class="modal fade" id="auditModal<%= h.id %>" tabindex="-1">
                                        <div class="modal-dialog modal-lg">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Rapport : <%= h.titre %></h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <form action="/ambassadeur/soumettre-rapport" method="POST">
                                                        <input type="hidden" name="mission_id" value="<%= h.id %>">
                                                        
                                                        <div class="audit-form-section">
                                                            <label class="fw-bold mb-2">1. Qualit√© de l'accueil</label>
                                                            <select name="accueil" class="form-select" required>
                                                                <option value="5">5 - Excellent (Sourire)</option>
                                                                <option value="3">3 - Neutre</option>
                                                                <option value="1">1 - Mauvais (Froid)</option>
                                                            </select>
                                                        </div>
                                                        <div class="audit-form-section">
                                                            <label class="fw-bold mb-2">2. Propret√©</label>
                                                            <div class="form-check"><input type="radio" name="proprete" value="Impeccable" class="form-check-input" required> Impeccable</div>
                                                            <div class="form-check"><input type="radio" name="proprete" value="Passable" class="form-check-input"> Passable</div>
                                                            <div class="form-check"><input type="radio" name="proprete" value="Sale" class="form-check-input"> Sale</div>
                                                        </div>
                                                        <div class="audit-form-section">
                                                            <label class="fw-bold mb-2">3. Commentaire</label>
                                                            <textarea name="commentaire" class="form-control" rows="3" required></textarea>
                                                        </div>
                                                        <button type="submit" class="btn btn-success w-100 rounded-pill">Soumettre</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% } else if(h.statut === 'soumis') { %>
                                    <span class="text-muted small">En attente validation</span>
                                <% } else { %>
                                    <i class="bi bi-check-circle-fill text-success"></i> Termin√©
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

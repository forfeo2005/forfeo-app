<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Missions | FORFEO LAB</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h2 class="fw-bold">Gains : <%= totalGains %>$</h2>
            <a href="/ambassadeur/mes-missions" class="btn btn-primary rounded-pill">Mes Missions</a>
        </div>
        <div class="row g-4">
            <% missions.forEach(m => { %>
                <div class="col-md-4">
                    <div class="card p-4 border-0 shadow-sm rounded-4" style="border-left: 5px solid #007bff;">
                        <h5 class="fw-bold"><%= m.titre %></h5>
                        <p class="small text-muted"><%= m.description %></p>
                        <form action="/postuler-mission" method="POST">
                            <input type="hidden" name="id_mission" value="<%= m.id %>">
                            <button type="submit" class="btn btn-outline-primary w-100 rounded-pill">RÃ©server</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    </body>
</html>

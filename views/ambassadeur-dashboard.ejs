<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Ambassadeur | FORFEO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/premium-dashboard.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="premium-bg"></div>
    <div class="container py-5">
        <div class="d-flex justify-content-between mb-5 align-items-center">
            <h3 class="fw-bold">Bonjour, <%= userName %></h3>
            <div class="d-flex flex-column align-items-center">
                <img src="/images/logo-forfeo.png" height="40">
                <span class="brand-lab-neon">LAB</span>
            </div>
            <div class="d-flex gap-2">
                <a href="/profil" class="btn btn-outline-primary btn-sm rounded-pill">Mon Profil</a>
                <a href="/logout" class="btn btn-danger btn-sm rounded-pill">D√©connexion</a>
            </div>
        </div>

        <ul class="nav nav-pills mb-4 gap-3 p-2 glass-card d-inline-flex">
            <li class="nav-item"><button class="nav-link active rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#missions">Missions</button></li>
            <li class="nav-item"><button class="nav-link rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#historique">Historique</button></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade show active" id="missions">
                <h4 class="fw-bold mb-4">üìç Disponibles</h4>
                <div class="row g-4">
                    <% missions.forEach(m => { %>
                        <div class="col-md-4">
                            <div class="glass-card h-100">
                                <h5 class="fw-bold"><%= m.titre %></h5>
                                <span class="badge bg-success mb-2"><%= m.recompense %>$</span>
                                <form action="/ambassadeur/postuler" method="POST"><input type="hidden" name="id_mission" value="<%= m.id %>"><button class="btn btn-primary w-100">R√©server</button></form>
                            </div>
                        </div>
                    <% }) %>
                </div>

                <h5 class="fw-bold mt-5 mb-4">üìù Mes missions en cours</h5>
                <% historique.filter(h => h.statut === 'reserve').forEach(h => { %>
                    <div class="glass-card mb-3 p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div><h5 class="fw-bold mb-1"><%= h.titre %></h5><span class="badge bg-info text-dark"><%= h.type_audit %></span></div>
                            <div class="d-flex gap-2">
                                <% if(h.type_audit.includes('Sondage')) { %>
                                    <a href="mailto:<%= h.client_email %>?subject=Sondage Satisfaction&body=Bonjour, je suis ambassadeur Forfeo..." class="btn btn-info text-white rounded-pill">üìß Envoyer Email</a>
                                <% } %>
                                <button class="btn btn-primary rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#modal<%= h.id %>">Remplir Rapport</button>
                            </div>
                        </div>
                        <div class="modal fade" id="modal<%= h.id %>" tabindex="-1"><div class="modal-dialog"><div class="modal-content"><div class="modal-header"><h5 class="modal-title">Rapport</h5></div><div class="modal-body">
                            <form action="/ambassadeur/soumettre-rapport" method="POST">
                                <input type="hidden" name="mission_id" value="<%= h.id %>">
                                <div class="mb-3"><label>Note Globale / 10</label><input type="number" name="note_globale" class="form-control" max="10" required></div>
                                <div class="mb-3"><label>Commentaire</label><textarea name="commentaire" class="form-control" rows="3" required></textarea></div>
                                <button class="btn btn-success w-100">Soumettre</button>
                            </form>
                        </div></div></div></div>
                    </div>
                <% }) %>
            </div>

            <div class="tab-pane fade" id="historique">
                <div class="glass-card">
                    <table class="premium-table">
                        <thead><tr><th>Mission</th><th>Montant</th><th>Statut</th></tr></thead>
                        <tbody>
                            <% historique.forEach(h => { %>
                                <tr>
                                    <td><%= h.titre %></td>
                                    <td class="fw-bold text-success"><%= h.recompense %>$</td>
                                    <td><% if(h.statut_paiement === 'paye') { %><span class="badge bg-success">PAY√â</span><% } else { %><span class="badge bg-secondary"><%= h.statut %></span><% } %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/forfy') %>
</body>
</html>

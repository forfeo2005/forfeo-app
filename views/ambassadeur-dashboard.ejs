    </nav>

    <div class="container py-5">
        <h2 class="fw-bold">Gains : <%= totalGains %>$</h2>
        <div class="row mt-4">
            <% missions.forEach(m => { %>
                <div class="col-md-6">
                    <div class="card-mission shadow-sm">
                        <div class="d-flex justify-content-between">
                            <h5 class="fw-bold"><%= m.titre %></h5>
                            <span class="badge bg-success"><%= m.recompense %></span>
                        </div>
                        <p class="small text-muted"><%= m.description %></p>
                        <form action="/postuler-mission" method="POST">
                            <input type="hidden" name="id_mission" value="<%= m.id %>">
                            <button type="submit" class="btn btn-primary btn-sm w-100 rounded-pill">R√©server</button>
                        </form>
                    </div>

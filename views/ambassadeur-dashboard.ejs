<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Ambassadeur | FORFEO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/premium-dashboard.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="premium-bg"></div>
    <div class="container py-5">
        <div class="d-flex justify-content-between mb-5 align-items-center">
            <h3 class="fw-bold">Bonjour, <%= userName %></h3>
            <div class="d-flex flex-column align-items-center">
                <img src="/images/logo-forfeo.png" height="40">
                <span class="brand-lab-neon">LAB</span>
            </div>
            <div class="d-flex gap-2">
                <a href="/profil" class="btn btn-outline-primary btn-sm rounded-pill">Profil</a>
                <a href="/logout" class="btn btn-danger btn-sm rounded-pill">D√©connexion</a>
            </div>
        </div>

        <ul class="nav nav-pills mb-4 gap-3 p-2 glass-card d-inline-flex" role="tablist">
            <li class="nav-item"><button class="nav-link active rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#missions">Missions</button></li>
            <li class="nav-item"><button class="nav-link rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#historique">Historique</button></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade show active" id="missions">
                <h4 class="fw-bold mb-4">üìç Disponibles</h4>
                <div class="row g-4 mb-5">
                    <% missions.forEach(m => { %>
                        <div class="col-md-4">
                            <div class="glass-card h-100 p-4 border-0 shadow-sm transition-hover">
                                <h5 class="fw-bold mb-2"><%= m.titre %></h5>
                                <div class="mb-3">
                                    <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 rounded-pill"><%= m.type_audit %></span>
                                </div>
                                <div class="d-flex justify-content-between align-items-end mt-4">
                                    <span class="fs-4 fw-bold text-success"><%= m.recompense %>$</span>
                                    <form action="/ambassadeur/postuler" method="POST">
                                        <input type="hidden" name="id_mission" value="<%= m.id %>">
                                        <button class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold">R√©server</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>

                <h4 class="fw-bold mb-4">üìù Mes missions en cours</h4>
                <% historique.filter(h => h.statut === 'reserve').forEach(h => { %>
                    <div class="glass-card mb-3 p-4 d-flex justify-content-between align-items-center flex-wrap gap-3">
                        <div>
                            <h5 class="fw-bold mb-1"><%= h.titre %></h5>
                            <span class="badge bg-info text-dark rounded-pill px-3"><%= h.type_audit %></span>
                        </div>
                        <div class="d-flex gap-2">
                            <% if(h.type_audit.includes('Sondage')) { %>
                                <a href="mailto:<%= h.client_email %>?subject=Sondage Satisfaction - Forfeo Lab&body=Bonjour,..." class="btn btn-info text-white rounded-pill shadow-sm fw-bold">
                                    <i class="bi bi-envelope-fill me-2"></i>Email Client
                                </a>
                            <% } %>
                            <button class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold" data-bs-toggle="modal" data-bs-target="#modalFull<%= h.id %>">
                                <i class="bi bi-pencil-square me-2"></i>Remplir Rapport
                            </button>
                        </div>
                    </div>

                    <div class="modal fade" id="modalFull<%= h.id %>" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-xl modal-dialog-scrollable">
                            <div class="modal-content border-0 rounded-4 shadow-lg">
                                <div class="modal-header border-0 bg-primary text-white p-4">
                                    <h5 class="modal-title fw-bold"><i class="bi bi-clipboard-data me-2"></i>Rapport : <%= h.titre %></h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body p-4 p-md-5 bg-light">
                                    <form action="/ambassadeur/soumettre-rapport" method="POST" class="needs-validation">
                                        <input type="hidden" name="mission_id" value="<%= h.id %>">
                                        
                                        <h5 class="text-primary fw-bold mb-3 border-bottom pb-2">Informations de base</h5>
                                        <div class="row g-4 mb-4">
                                            <div class="col-md-6">
                                                <label class="form-label fw-semibold">Ambassadeur</label>
                                                <input type="text" class="form-control bg-white shadow-sm border-0" name="nom_ambassadeur" value="<%= userName %>" readonly>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label fw-semibold">Entreprise visit√©e</label>
                                                <input type="text" class="form-control bg-white shadow-sm border-0" name="nom_entreprise" value="<%= h.titre %>" readonly>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label fw-semibold">Date de visite *</label>
                                                <input type="date" class="form-control shadow-sm border-0" name="date_visite" required>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label fw-semibold">Type d'exp√©rience *</label>
                                                <select class="form-select shadow-sm border-0" name="type_experience" required>
                                                    <option value="">Choisir...</option>
                                                    <option value="Restaurant">Restaurant</option>
                                                    <option value="H√¥tel">H√¥tel</option>
                                                    <option value="Spa">Spa</option>
                                                    <option value="Activit√©">Activit√©</option>
                                                    <option value="Autre">Autre</option>
                                                </select>
                                            </div>
                                        </div>

                                        <% if(h.type_audit.includes('Sondage')) { %>
                                            <h5 class="text-primary fw-bold mb-3 border-bottom pb-2 mt-5">Ressenti Client</h5>
                                            
                                            <div class="mb-4">
                                                <label class="form-label fw-semibold">Niveau de satisfaction *</label>
                                                <select class="form-select shadow-sm border-0 p-3" name="niveau_satisfaction" required>
                                                    <option value="">S√©lectionner...</option>
                                                    <option value="Tres insatisfait">Tr√®s insatisfait üò°</option>
                                                    <option value="Insatisfait">Insatisfait üòï</option>
                                                    <option value="Neutre">Neutre üòê</option>
                                                    <option value="Satisfait">Satisfait üôÇ</option>
                                                    <option value="Tres satisfait">Tr√®s satisfait ü§©</option>
                                                </select>
                                            </div>

                                            <div class="mb-4">
                                                <label class="form-label fw-semibold">Fluidit√© de la r√©servation *</label>
                                                <select class="form-select shadow-sm border-0 p-3" name="fluidite" required>
                                                    <option value="">S√©lectionner...</option>
                                                    <option value="Difficile">Difficile</option>
                                                    <option value="Acceptable">Acceptable</option>
                                                    <option value="Fluide">Fluide</option>
                                                    <option value="Tres fluide">Tr√®s fluide</option>
                                                </select>
                                            </div>

                                        <% } else if(h.type_audit.includes('Qualit√©')) { %>
                                            <h5 class="text-primary fw-bold mb-3 border-bottom pb-2 mt-5">Crit√®res d'√©valuation</h5>
                                            
                                            <div class="row g-4 mb-4">
                                                <div class="col-md-4">
                                                    <label class="form-label fw-semibold">Qualit√© de l'accueil *</label>
                                                    <select class="form-select shadow-sm border-0" name="accueil" required>
                                                        <option value="">S√©lectionner...</option>
                                                        <option>Excellent</option><option>Bon</option><option>Moyen</option><option>Mauvais</option>
                                                    </select>
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="form-label fw-semibold">Propret√© des lieux *</label>
                                                    <select class="form-select shadow-sm border-0" name="proprete" required>
                                                        <option value="">S√©lectionner...</option>
                                                        <option>Impeccable</option><option>Acceptable</option><option>Sale</option>
                                                    </select>
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="form-label fw-semibold">Vitesse du service *</label>
                                                    <select class="form-select shadow-sm border-0" name="vitesse" required>
                                                        <option value="">S√©lectionner...</option>
                                                        <option>Rapide</option><option>Correct</option><option>Lent</option>
                                                    </select>
                                                </div>
                                            </div>
                                            
                                            <div class="mb-4">
                                                <label class="form-label fw-semibold">Commentaire d√©taill√© sur la qualit√©</label>
                                                <textarea class="form-control shadow-sm border-0" name="commentaire_detaille" rows="4"></textarea>
                                            </div>

                                        <% } else { %>
                                            <h5 class="text-primary fw-bold mb-3 border-bottom pb-2 mt-5">√âvaluation Terrain</h5>
                                            
                                            <div class="mb-4">
                                                <label class="form-label fw-semibold">Description g√©n√©rale de la visite *</label>
                                                <textarea class="form-control shadow-sm border-0" name="description" rows="4" required></textarea>
                                            </div>
                                            
                                            <div class="row g-4 mb-4">
                                                <div class="col-md-6">
                                                    <label class="form-label fw-semibold text-success"><i class="bi bi-plus-circle me-1"></i>Points forts *</label>
                                                    <textarea class="form-control shadow-sm border-0" name="points_forts" rows="3" required></textarea>
                                                </div>
                                                <div class="col-md-6">
                                                    <label class="form-label fw-semibold text-danger"><i class="bi bi-dash-circle me-1"></i>Points √† am√©liorer *</label>
                                                    <textarea class="form-control shadow-sm border-0" name="points_ameliorer" rows="3" required></textarea>
                                                </div>
                                            </div>
                                        <% } %>

                                        <div class="card bg-white border-0 shadow-sm p-4 mb-4 mt-4">
                                            <div class="row align-items-center">
                                                <div class="col-md-6">
                                                    <label class="form-label fw-bold h5 mb-0 text-primary">Note Globale / 10 *</label>
                                                    <p class="small text-muted mb-0">Soyez objectif dans votre notation.</p>
                                                </div>
                                                <div class="col-md-6">
                                                    <input type="number" name="note_globale" class="form-control form-control-lg text-center fw-bold border-2 border-primary" min="0" max="10" step="0.5" required>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mb-4">
                                            <label class="form-label fw-semibold">Commentaire libre / Conclusion</label>
                                            <textarea class="form-control shadow-sm border-0" name="commentaire_libre" rows="3"></textarea>
                                        </div>

                                        <div class="form-check mb-5 p-3 bg-white rounded shadow-sm">
                                            <input type="checkbox" class="form-check-input" id="certify<%= h.id %>" required>
                                            <label class="form-check-label small text-muted fw-semibold" for="certify<%= h.id %>">
                                                Je certifie que ce rapport est honn√™te, impartial et bas√© sur ma propre exp√©rience terrain.
                                            </label>
                                        </div>

                                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                            <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">Annuler</button>
                                            <button type="submit" class="btn btn-success rounded-pill px-5 fw-bold shadow-lg">Envoyer le rapport</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
            
            <div class="tab-pane fade" id="historique">
                <div class="glass-card">
                    <h5 class="fw-bold mb-4">Mon Historique</h5>
                    <div class="table-responsive">
                        <table class="premium-table">
                            <thead>
                                <tr>
                                    <th>Mission</th>
                                    <th>R√©mun√©ration</th>
                                    <th>Statut</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% historique.forEach(h => { %>
                                    <tr>
                                        <td class="fw-semibold"><%= h.titre %></td>
                                        <td class="fw-bold text-success"><%= h.recompense %>$</td>
                                        <td>
                                            <% if(h.statut_paiement === 'paye') { %>
                                                <span class="badge bg-success bg-opacity-10 text-success border border-success">Pay√©</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary bg-opacity-10 text-dark border"><%= h.statut %></span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/forfy') %>
</body>
</html>

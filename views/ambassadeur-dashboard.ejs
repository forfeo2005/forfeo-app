<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Ambassadeur | FORFEO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/premium-dashboard.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="premium-bg"></div>
    <div class="container py-5">
        <div class="d-flex justify-content-between mb-5 align-items-center">
            <h3 class="fw-bold">Bonjour, <%= userName %></h3>
            <div class="d-flex flex-column align-items-center"><img src="/images/logo-forfeo.png" height="40"><span class="brand-lab-neon">LAB</span></div>
            <div class="d-flex gap-2"><a href="/profil" class="btn btn-outline-primary btn-sm rounded-pill">Profil</a><a href="/logout" class="btn btn-danger btn-sm rounded-pill">D√©connexion</a></div>
        </div>

        <ul class="nav nav-pills mb-4 gap-3 p-2 glass-card d-inline-flex" role="tablist">
            <li class="nav-item"><button class="nav-link active rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#missions">Missions</button></li>
            <li class="nav-item"><button class="nav-link rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#historique">Historique</button></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade show active" id="missions">
                <h4 class="fw-bold mb-4">üìç Disponibles</h4>
                <div class="row g-4 mb-5">
                    <% missions.forEach(m => { %>
                        <div class="col-md-4"><div class="glass-card h-100"><h5 class="fw-bold"><%= m.titre %></h5><span class="badge bg-success mb-2"><%= m.recompense %>$</span><form action="/ambassadeur/postuler" method="POST"><input type="hidden" name="id_mission" value="<%= m.id %>"><button class="btn btn-primary w-100 rounded-pill">R√©server</button></form></div></div>
                    <% }) %>
                </div>

                <h4 class="fw-bold mb-4">üìù En cours</h4>
                <% historique.filter(h => h.statut === 'reserve').forEach(h => { %>
                    <div class="glass-card mb-3 p-4 d-flex justify-content-between align-items-center">
                        <div><h5 class="fw-bold mb-1"><%= h.titre %></h5><span class="badge bg-info text-dark"><%= h.type_audit %></span></div>
                        <div class="d-flex gap-2">
                            <% if(h.type_audit.includes('Sondage')) { %><a href="mailto:<%= h.client_email %>?subject=Sondage Satisfaction&body=Bonjour..." class="btn btn-info text-white rounded-pill">üìß Email</a><% } %>
                            <button class="btn btn-primary rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#modalFull<%= h.id %>">Remplir Rapport</button>
                        </div>
                    </div>

                    <div class="modal fade" id="modalFull<%= h.id %>" tabindex="-1"><div class="modal-dialog modal-xl"><div class="modal-content border-0 shadow-lg"><div class="modal-header bg-primary text-white"><h5 class="modal-title">Rapport : <%= h.titre %></h5><button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button></div><div class="modal-body p-5 bg-light">
                        <form action="/ambassadeur/soumettre-rapport" method="POST">
                            <input type="hidden" name="mission_id" value="<%= h.id %>">
                            <h5 class="text-primary fw-bold mb-3">Informations de base</h5>
                            <div class="row g-3 mb-4">
                                <div class="col-md-6"><label class="form-label fw-semibold">Ambassadeur</label><input type="text" class="form-control" name="nom_ambassadeur" value="<%= userName %>" readonly></div>
                                <div class="col-md-6"><label class="form-label fw-semibold">Entreprise</label><input type="text" class="form-control" name="nom_entreprise" value="<%= h.titre %>" readonly></div>
                                <div class="col-md-6"><label class="form-label fw-semibold">Date visite</label><input type="date" class="form-control" name="date_visite" required></div>
                                <div class="col-md-6"><label class="form-label fw-semibold">Type</label><select name="type_experience" class="form-select"><option>Restaurant</option><option>H√¥tel</option><option>Magasin</option><option>Autre</option></select></div>
                            </div>

                            <% if(h.type_audit.includes('Sondage')) { %>
                                <h5 class="text-primary fw-bold mb-3">Sondage Satisfaction</h5>
                                <div class="mb-3"><label class="fw-semibold">Niveau de satisfaction</label><select name="niveau_satisfaction" class="form-select"><option>Tr√®s Satisfait</option><option>Satisfait</option><option>Neutre</option><option>Insatisfait</option></select></div>
                                <div class="mb-3"><label class="fw-semibold">Fluidit√© R√©servation</label><select name="fluidite" class="form-select"><option>Tr√®s fluide</option><option>Fluide</option><option>Difficile</option></select></div>
                            <% } else if(h.type_audit.includes('Qualit√©')) { %>
                                <h5 class="text-primary fw-bold mb-3">Crit√®res Qualit√©</h5>
                                <div class="row g-3 mb-3">
                                    <div class="col-md-4"><label class="fw-semibold">Accueil</label><select name="accueil" class="form-select"><option>Excellent</option><option>Bon</option><option>Moyen</option><option>Mauvais</option></select></div>
                                    <div class="col-md-4"><label class="fw-semibold">Propret√©</label><select name="proprete" class="form-select"><option>Impeccable</option><option>Acceptable</option><option>Sale</option></select></div>
                                    <div class="col-md-4"><label class="fw-semibold">Vitesse</label><select name="vitesse" class="form-select"><option>Rapide</option><option>Lent</option></select></div>
                                </div>
                                <div class="mb-3"><label class="fw-semibold">Description g√©n√©rale</label><textarea name="description" class="form-control" rows="3" required></textarea></div>
                            <% } else { %>
                                <h5 class="text-primary fw-bold mb-3">Rapport d'Exp√©rience</h5>
                                <div class="mb-3"><label class="fw-semibold">Description g√©n√©rale</label><textarea name="description" class="form-control" rows="3" required></textarea></div>
                                <div class="row g-3 mb-3">
                                    <div class="col-md-6"><label class="fw-semibold text-success">Points Forts</label><textarea name="points_forts" class="form-control" rows="2"></textarea></div>
                                    <div class="col-md-6"><label class="fw-semibold text-danger">Points √† am√©liorer</label><textarea name="points_ameliorer" class="form-control" rows="2"></textarea></div>
                                </div>
                            <% } %>

                            <div class="mb-4">
                                <label class="fw-bold h5">Note Globale / 10</label>
                                <input type="number" name="note_globale" class="form-control form-control-lg border-primary" max="10" step="0.5" required>
                            </div>
                            
                            <div class="mb-4">
                                <label class="fw-semibold">Commentaire D√©taill√©</label>
                                <textarea name="commentaire_detaille" class="form-control" rows="3"></textarea>
                            </div>

                            <div class="form-check mb-4">
                                <input type="checkbox" class="form-check-input" required>
                                <label class="form-check-label small text-muted">Je certifie l'honn√™tet√© de ce rapport.</label>
                            </div>

                            <button class="btn btn-success w-100 py-3 fw-bold rounded-pill shadow">Soumettre le Rapport</button>
                        </form>
                    </div></div></div></div>
                <% }) %>
            </div>
            
            <div class="tab-pane fade" id="historique">
                <div class="glass-card"><table class="premium-table">
                    <% historique.forEach(h => { %><tr><td><%= h.titre %></td><td class="fw-bold text-success"><%= h.recompense %>$</td><td><%= h.statut %></td></tr><% }) %>
                </table></div>
            </div>
        </div>
    </div>
    <%- include('partials/forfy') %>
</body>
</html>

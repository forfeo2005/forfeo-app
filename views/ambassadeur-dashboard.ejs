<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Ambassadeur | FORFEO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/premium-dashboard.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="premium-bg"></div>
    <div class="container py-5">
        <div class="d-flex justify-content-between mb-5 align-items-center">
            <h3 class="fw-bold">Bonjour, <%= userName %></h3>
            
            <a class="navbar-brand p-0 d-flex flex-column align-items-center me-auto ms-4" href="#">
                <img src="/images/logo-forfeo.png" alt="Forfeo" height="35">
                <span style="font-size: 8px; font-weight: 900; letter-spacing: 3px; color: #0061ff; margin-top: 2px;">LAB</span>
            </a>

            <a href="/logout" class="btn btn-danger btn-sm rounded-pill">D√©connexion</a>
        </div>

        <ul class="nav nav-pills mb-4 gap-3 p-2 glass-card d-inline-flex" role="tablist">
            <li class="nav-item"><button class="nav-link active rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#missions">Missions Dispo</button></li>
            <li class="nav-item"><button class="nav-link rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#historique">Historique & Gains</button></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade show active" id="missions">
                <h4 class="fw-bold mb-4">üìç Missions Disponibles</h4>
                <div class="row g-4">
                    <% if(typeof missions !== 'undefined') { %>
                        <% missions.forEach(m => { %>
                            <div class="col-md-4">
                                <div class="glass-card h-100">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="badge bg-primary"><%= m.type_audit %></span>
                                        <span class="fw-bold text-success"><%= m.recompense %>$</span>
                                    </div>
                                    <h5 class="fw-bold"><%= m.titre %></h5>
                                    <% if(m.adresse) { %>
                                        <p class="small text-muted mb-2"><i class="bi bi-geo-alt"></i> <%= m.adresse %></p>
                                        <a href="<%= m.google_map_link %>" target="_blank" class="btn btn-light btn-sm w-100 mb-3 text-primary">Voir Carte</a>
                                    <% } %>
                                    <form action="/ambassadeur/postuler" method="POST">
                                        <input type="hidden" name="id_mission" value="<%= m.id %>">
                                        <button class="btn btn-primary w-100 rounded-pill">R√©server</button>
                                    </form>
                                </div>
                            </div>
                        <% }) %>
                    <% } %>
                </div>

                <h5 class="fw-bold mt-5 mb-4">üìù Mes missions en cours (√Ä remplir)</h5>
                <% if(typeof historique !== 'undefined') { %>
                    <% historique.filter(h => h.statut === 'reserve').forEach(h => { %>
                        <div class="glass-card mb-3 p-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h5 class="fw-bold mb-1"><%= h.titre %></h5>
                                    <span class="badge bg-info text-dark"><%= h.type_audit %></span>
                                </div>
                                <div class="d-flex gap-2">
                                    <% if(h.type_audit.includes('Sondage')) { %>
                                        <a href="mailto:<%= h.client_email %>?subject=Sondage&body=Bonjour..." class="btn btn-info text-white rounded-pill">Envoyer Email</a>
                                    <% } %>
                                    <button class="btn btn-primary rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#modal<%= h.id %>">Remplir Rapport</button>
                                </div>
                            </div>

                            <div class="modal fade" id="modal<%= h.id %>" tabindex="-1">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header"><h5 class="modal-title">Rapport : <%= h.titre %></h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                                        <div class="modal-body bg-light">
                                            <form action="/ambassadeur/soumettre-rapport" method="POST">
                                                <input type="hidden" name="mission_id" value="<%= h.id %>">
                                                
                                                <div class="card p-3 border-0 shadow-sm mb-3">
                                                    <label class="fw-bold mb-2">Note Globale / 10</label>
                                                    <input type="number" name="note_globale" class="form-control" max="10" required>
                                                </div>
                                                <div class="card p-3 border-0 shadow-sm mb-3">
                                                    <label class="fw-bold mb-2">Commentaires d√©taill√©s</label>
                                                    <textarea name="commentaire" class="form-control" rows="4" required></textarea>
                                                </div>
                                                
                                                <button class="btn btn-success w-100 fw-bold py-2">Envoyer le rapport</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } %>
            </div>

            <div class="tab-pane fade" id="historique">
                <div class="glass-card bg-primary text-white mb-4 p-4">
                    <div class="display-4 fw-bold"><%= typeof totalGains !== 'undefined' ? totalGains : 0 %> $</div>
                    <p class="mb-0 opacity-75">Total accumul√© (Missions approuv√©es)</p>
                </div>
                
                <div class="glass-card">
                    <table class="premium-table">
                        <thead><tr><th>Date</th><th>Mission</th><th>Montant</th><th>Statut Paiement</th></tr></thead>
                        <tbody>
                            <% if(typeof historique !== 'undefined') { %>
                                <% historique.forEach(h => { %>
                                    <tr>
                                        <td><%= new Date(h.created_at).toLocaleDateString() %></td>
                                        <td><%= h.titre %></td>
                                        <td class="fw-bold text-success"><%= h.recompense %>$</td>
                                        <td>
                                            <% if(h.statut_paiement === 'paye') { %>
                                                <span class="badge bg-success">PAY√â le <%= h.date_paiement ? new Date(h.date_paiement).toLocaleDateString() : '' %></span>
                                            <% } else if (h.statut === 'approuve') { %>
                                                <span class="badge bg-warning text-dark">EN ATTENTE DE VIREMENT</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary"><%= h.statut %></span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/forfy') %>
</body>
</html>

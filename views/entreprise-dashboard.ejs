<!DOCTYPE html>
<html lang="fr-CA">
<head>
    <meta charset="UTF-8">
    <title>FORFEO LAB - Dashboard Entreprise</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background-color: #f8fafc; font-family: 'Inter', sans-serif; padding: 40px; }
        .card { border-radius: 15px; border: none; box-shadow: 0 4px 6px rgba(0,0,0,0.05); margin-bottom: 20px; }
        .badge-note { background: #fef3c7; color: #92400e; font-weight: bold; }
    </style>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-between mb-5 align-items-center">
            <h2 class="fw-bold text-primary">Tableau de Bord Pro</h2>
            <a href="/logout" class="btn btn-outline-danger btn-sm">Déconnexion</a>
        </div>

        <div class="row">
            <div class="col-md-5">
                <button class="btn btn-primary w-100 mb-4 py-2 fw-bold shadow" data-bs-toggle="modal" data-bs-target="#modalMission">
                    CRÉER UN NOUVEL AUDIT
                </button>
                <h5 class="fw-bold mb-3 text-muted small uppercase">Mes Missions</h5>
                <% missions.forEach(m => { %>
                    <div class="card p-3 bg-white">
                        <div class="d-flex justify-content-between">
                            <strong><%= m.titre %></strong>
                            <span class="badge bg-light text-primary border"><%= m.statut %></span>
                        </div>
                    </div>
                <% }) %>
            </div>

            <div class="col-md-7">
                <h5 class="fw-bold mb-3 text-muted small uppercase">Rapports d'Audits Reçus</h5>
                <% if (rapports.length === 0) { %>
                    <div class="card p-5 text-center bg-white text-muted">Aucun rapport reçu pour le moment.</div>
                <% } %>
                <% rapports.forEach(r => { %>
                    <div class="card p-4 bg-white">
                        <div class="d-flex justify-content-between mb-2">
                            <h6 class="fw-bold mb-0"><%= r.titre %></h6>
                            <span class="badge badge-note">Note : <%= r.note %>/5</span>
                        </div>
                        <p class="small text-dark mt-2 mb-3"><%= r.contenu %></p>
                        <div class="small text-muted border-top pt-2">Audit par : <strong><%= r.ambassadeur %></strong></div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalMission" tabindex="-1">
        <div class="modal-dialog">
            <form action="/creer-mission" method="POST" class="modal-content p-4 rounded-4 shadow">
                <h5 class="fw-bold mb-3 text-primary">Nouvelle Mission</h5>
                <input type="text" name="titre" class="form-control mb-2" placeholder="Titre de la mission (ex: Audit Resto)" required>
                <textarea name="description" class="form-control mb-2" placeholder="Instructions détaillées" rows="4" required></textarea>
                <input type="text" name="recompense" class="form-control mb-3" placeholder="Récompense (ex: Repas offert)" required>
                <button class="btn btn-primary w-100 py-2 fw-bold">PUBLIER</button>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

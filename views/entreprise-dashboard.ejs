                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="tab-pane fade" id="employes">
                <div class="glass-card" style="max-width: 500px;">
                    <h5 class="fw-bold mb-3">Ajouter un employ√©</h5>
                    <p class="text-muted small mb-4">Cr√©ez un acc√®s pour permettre √† vos employ√©s de suivre l'Acad√©mie Forfeo.</p>
                    <form action="/entreprise/ajouter-employe" method="POST">
                        <input type="text" name="nom" class="form-control mb-3 rounded-3" placeholder="Nom complet" required>
                        <input type="email" name="email" class="form-control mb-3 rounded-3" placeholder="Email professionnel" required>
                        <input type="password" name="password" class="form-control mb-3 rounded-3" placeholder="Mot de passe provisoire" required>
                        <button class="btn btn-success w-100 rounded-pill fw-bold">Cr√©er le compte</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/forfy') %>
    <script>
        function copyLink() {
            const el = document.getElementById("dynamic-link"); el.select(); navigator.clipboard.writeText(el.value); alert("Lien copi√© !");
        }
        const base = "<%= typeof surveyBaseLink !== 'undefined' ? surveyBaseLink : '' %>";
        const sel = document.getElementById('survey-type-selector');
        const img = document.getElementById('dynamic-qr');
        const inp = document.getElementById('dynamic-link');
        if(sel && img) {
            sel.addEventListener('change', function() {
                const url = base + "?type=" + encodeURIComponent(this.value);
                img.src = `https://api.qrserver.com/v1/create-qr-code/?size=180x180&data=${encodeURIComponent(url)}`;
                inp.value = url;
            });
        }
    </script>
</body>
</html>

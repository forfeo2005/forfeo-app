<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Entreprise | FORFEO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/premium-dashboard.css">
</head>
<body>
    <div class="premium-bg"></div>
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h3 class="fw-bold">Bonjour, <%= userName %> üëã</h3>
            <div class="d-flex gap-2">
                <a href="/profil" class="btn btn-outline-primary btn-sm rounded-pill">Profil</a>
                <a href="/logout" class="btn btn-danger btn-sm rounded-pill">D√©connexion</a>
            </div>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-lg-8">
                <div class="glass-card h-100">
                    <h2 class="fw-bold text-primary mb-3">Tableau de Bord</h2>
                    <p>Suivez vos audits et la formation de vos √©quipes.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="glass-card h-100 text-center bg-white border border-primary">
                    <h5 class="fw-bold">Passez au niveau sup√©rieur</h5>
                    <a href="https://buy.stripe.com/7sY4gAbPs9graUw65Ed7q0a" class="btn btn-flash-pro w-100 py-3 rounded-pill mt-3 shadow-lg">
                        ‚ö° PASSER PRO (149$) ‚ö°
                    </a>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-4">
                <div class="glass-card">
                    <h5 class="fw-bold mb-3">Nouvel Audit</h5>
                    <form action="/entreprise/creer-audit" method="POST">
                        <input type="text" name="titre" placeholder="Titre / Lieu" class="form-control mb-2" required>
                        <select name="type_audit" class="form-select mb-2">
                            <option>Audit Standard (Accueil)</option>
                            <option>Audit Propret√©</option>
                            <option>Audit T√©l√©phonique</option>
                        </select>
                        <input type="text" name="recompense" placeholder="R√©compense (ex: 50)" class="form-control mb-3" required>
                        <button class="btn btn-primary w-100 rounded-pill">Publier</button>
                    </form>
                    <hr>
                    <h6 class="fw-bold mt-4">Ajouter un employ√©</h6>
                    <form action="/entreprise/ajouter-employe" method="POST">
                        <input type="email" name="email" placeholder="Email" class="form-control mb-2" required>
                        <input type="password" name="password" placeholder="Mot de passe" class="form-control mb-2" required>
                        <button class="btn btn-dark w-100 rounded-pill">Inscrire</button>
                    </form>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="glass-card mb-4">
                    <h5 class="fw-bold mb-3">R√©sultats de l'Acad√©mie (Employ√©s)</h5>
                    <table class="premium-table">
                        <thead><tr><th>Employ√©</th><th>Module</th><th>Note</th><th>Certificat</th></tr></thead>
                        <tbody>
                            <% employeesScores.forEach(s => { %>
                                <tr>
                                    <td class="fw-bold"><%= s.nom %></td>
                                    <td><%= s.titre %></td>
                                    <td><span class="text-primary fw-bold"><%= Math.round((s.meilleur_score/15)*100) %>%</span></td>
                                    <td>
                                        <% if(s.statut === 'reussi') { %>
                                            <span class="badge bg-success">Certifi√©</span>
                                        <% } else { %>
                                            <span class="badge bg-warning text-dark">En cours</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>

                <div class="glass-card">
                    <h5 class="fw-bold mb-3">Historique des Missions</h5>
                    <table class="premium-table">
                        <thead><tr><th>Mission</th><th>Statut</th><th>Rapport</th></tr></thead>
                        <tbody>
                            <% missions.forEach(m => { %>
                                <tr>
                                    <td class="fw-bold"><%= m.titre %></td>
                                    <td><span class="badge-status <%= m.statut %>"><%= m.statut %></span></td>
                                    <td>
                                        <% if(m.statut === 'approuve') { %>
                                            <a href="/entreprise/telecharger-rapport/<%= m.id %>" class="btn btn-sm btn-outline-primary rounded-pill">T√©l√©charger PDF</a>
                                        <% } else { %>
                                            <span class="text-muted small">--</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

                                <% } %>
                            </form>
                        </div>

                        <div class="glass-card border-info position-relative overflow-hidden <%= isLocked ? 'locked-overlay' : '' %>">
                            <% if(isLocked) { %>
                                <div class="lock-icon"><i class="bi bi-lock-fill"></i></div>
                            <% } %>

                            <h5 class="fw-bold text-info mb-3">Commander un Sondage Certifi√©</h5>
                            <form action="/entreprise/commander-sondage" method="POST">
                                <input type="text" name="client_nom" placeholder="Nom du Client" class="form-control mb-2 rounded-3" <%= isLocked ? 'disabled' : '' %>>
                                <input type="email" name="client_email" placeholder="Email du Client" class="form-control mb-2 rounded-3" <%= isLocked ? 'disabled' : '' %>>
                                <select name="type_sondage" class="form-select mb-2 rounded-3" <%= isLocked ? 'disabled' : '' %>><option>Sondage Satisfaction</option></select>
                                <input type="text" name="recompense" placeholder="R√©compense ($)" class="form-control mb-3 rounded-3" <%= isLocked ? 'disabled' : '' %>>
                                
                                <% if(isLocked) { %>
                                    <button type="button" class="btn btn-secondary w-100 rounded-pill" disabled>Limite atteinte</button>
                                <% } else { %>

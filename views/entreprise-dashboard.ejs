<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Espace Pro | FORFEO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/premium-dashboard.css">
    <script>
        function filterTable() {
            let input = document.getElementById("searchInput").value.toUpperCase();
            let table = document.getElementById("missionsTable");
            let tr = table.getElementsByTagName("tr");
            for (let i = 0; i < tr.length; i++) {
                let td = tr[i].getElementsByTagName("td")[0];
                if (td) {
                    let txtValue = td.textContent || td.innerText;
                    tr[i].style.display = txtValue.toUpperCase().indexOf(input) > -1 ? "" : "none";
                }
            }
        }
    </script>
</head>
<body>
    <div class="premium-bg"></div>
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h3 class="fw-bold">Bonjour, <%= userName %> üëã</h3>
            <div class="d-flex gap-2">
                <a href="/profil" class="btn btn-outline-primary btn-sm rounded-pill">Profil</a>
                <a href="/logout" class="btn btn-danger btn-sm rounded-pill">D√©connexion</a>
            </div>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-lg-8">
                <div class="glass-card h-100"><h2 class="fw-bold mb-1">Tableau de Bord</h2><p class="text-muted">G√©rez vos audits et sondages.</p></div>
            </div>
            <div class="col-lg-4">
                <div class="glass-card h-100 bg-white text-center border border-primary">
                    <h5 class="fw-bold">Passez au niveau sup√©rieur</h5>
                    <a href="https://buy.stripe.com/7sY4gAbPs9graUw65Ed7q0a" class="btn btn-flash-pro w-100 py-3 rounded-pill mt-3 shadow-lg">‚ö° PASSER PRO (149$) ‚ö°</a>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-4">
                <div class="glass-card mb-4">
                    <h5 class="fw-bold mb-3"><i class="bi bi-geo-alt text-primary"></i> Nouvel Audit Terrain</h5>
                    <form action="/entreprise/creer-audit" method="POST">
                        <input type="text" name="titre" placeholder="Nom du lieu" class="form-control mb-2" required>
                        <input type="text" name="adresse" placeholder="Adresse compl√®te" class="form-control mb-2" required>
                        <select name="type_audit" class="form-select mb-2"><option value="Rapport Exp√©rience">Rapport d'Exp√©rience</option><option value="Audit Qualit√©">Audit Qualit√© & Propret√©</option></select>
                        <input type="text" name="recompense" placeholder="R√©compense ($)" class="form-control mb-3" required>
                        <button class="btn btn-primary w-100 rounded-pill">Publier</button>
                    </form>
                </div>
                <div class="glass-card border border-info mb-4">
                    <h5 class="fw-bold mb-3"><i class="bi bi-envelope text-info"></i> Commander Sondage</h5>
                    <form action="/entreprise/commander-sondage" method="POST">
                        <input type="text" name="client_nom" placeholder="Nom Client" class="form-control mb-2" required>
                        <input type="email" name="client_email" placeholder="Email Client" class="form-control mb-2" required>
                        <select name="type_sondage" class="form-select mb-2"><option value="Sondage Satisfaction">Satisfaction Client</option><option value="Sondage Apr√®s-Vente">Suivi Apr√®s-Vente</option></select>
                        <input type="text" name="recompense" placeholder="R√©compense ($)" class="form-control mb-3" required>
                        <button class="btn btn-info text-white w-100 rounded-pill">Commander</button>
                    </form>
                </div>
                
                <div class="glass-card">
                    <h6 class="fw-bold"><i class="bi bi-person-plus"></i> Inscrire Employ√©</h6>
                    <form action="/entreprise/ajouter-employe" method="POST" class="mt-2">
                        <input type="email" name="email" placeholder="Email" class="form-control mb-2 form-control-sm" required>
                        <input type="password" name="password" placeholder="Mot de passe" class="form-control mb-2 form-control-sm" required>
                        <button class="btn btn-dark w-100 rounded-pill btn-sm">Ajouter</button>
                    </form>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="glass-card">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="fw-bold mb-0">Historique</h5>
                        <input type="text" id="searchInput" onkeyup="filterTable()" placeholder="Rechercher..." class="form-control form-control-sm w-auto">
                    </div>
                    <div class="table-responsive">
                        <table class="premium-table" id="missionsTable">
                            <thead><tr><th>Mission</th><th>Type</th><th>Statut</th><th>Actions</th></tr></thead>
                            <tbody>
                                <% missions.forEach(m => { %>
                                    <tr>
                                        <td class="fw-bold"><%= m.titre %> <% if(m.adresse) { %><br><small class="text-muted"><%= m.adresse %></small><% } %> <% if(m.client_nom) { %><br><small class="text-info"><%= m.client_nom %></small><% } %></td>
                                        <td><%= m.type_audit %></td>
                                        <td><span class="badge-status <%= m.statut %>"><%= m.statut %></span></td>
                                        <td>
                                            <div class="d-flex gap-1">
                                                <% if(m.statut === 'approuve') { %><a href="/entreprise/telecharger-rapport/<%= m.id %>" class="btn btn-sm btn-outline-success rounded-circle"><i class="bi bi-download"></i></a><% } %>
                                                <form action="/entreprise/supprimer-mission" method="POST" onsubmit="return confirm('Supprimer ?');"><input type="hidden" name="id_mission" value="<%= m.id %>"><button class="btn btn-sm btn-outline-danger rounded-circle"><i class="bi bi-trash"></i></button></form>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <div class="glass-card mt-4">
                    <h5 class="fw-bold mb-3">R√©sultats Formations</h5>
                    <table class="premium-table">
                        <thead><tr><th>Employ√©</th><th>Module</th><th>Note</th><th>Certificat</th></tr></thead>
                        <tbody>
                            <% employeesScores.forEach(s => { %>
                                <tr>
                                    <td class="fw-bold"><%= s.nom %></td>
                                    <td><%= s.titre %></td>
                                    <td><%= Math.round((s.meilleur_score/15)*100) %>%</td>
                                    <td><% if(s.statut==='reussi') { %><span class="badge bg-success">Oui</span><% } else { %>Non<% } %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <%- include('partials/forfy') %>
</body>
</html>

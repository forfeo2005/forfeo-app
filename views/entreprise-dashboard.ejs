                            <% if(missions.length > 0) { %>
                                <table class="premium-table">
                                    <thead><tr><th>Titre</th><th>Statut</th><th>Action</th></tr></thead>
                                    <tbody>
                                        <% missions.forEach(m => { %>
                                            <tr>
                                                <td class="fw-semibold"><%= m.titre %></td>
                                                <td><span class="badge bg-secondary rounded-pill px-3"><%= m.statut %></span></td>
                                                <td><% if(m.statut === 'approuve'){ %><a href="/entreprise/telecharger-rapport/<%= m.id %>" class="btn btn-sm btn-outline-success rounded-pill fw-bold"><i class="bi bi-download me-1"></i>PDF</a><% } else { %> - <% } %></td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            <% } else { %>
                                <div class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    Aucune mission cr√©√©e pour l'instant.
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="campagnes">
                <div class="row g-4">
                    <div class="col-lg-5">
                        <div class="glass-card h-100 border-primary border-2 shadow-lg text-center">
                            <h4 class="fw-bold mb-3 text-primary">QR Code Intelligent</h4>
                            <p class="small text-muted mb-4">Ce QR code s'adapte automatiquement au type de questionnaire s√©lectionn√©.</p>
                            <div class="bg-white p-4 rounded-4 border d-inline-block mb-3 shadow-sm">
                                <img id="dynamic-qr" src="https://api.qrserver.com/v1/create-qr-code/?size=180x180&data=<%= encodeURIComponent(surveyBaseLink + '?type=G√©n√©ral') %>" class="img-fluid">
                            </div>
                            <div class="input-group">
                                <input type="text" id="dynamic-link" class="form-control form-control-sm bg-light" value="<%= surveyBaseLink %>?type=G√©n√©ral" readonly>
                                <button class="btn btn-outline-secondary btn-sm" onclick="copyLink()"><i class="bi bi-clipboard"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <div class="glass-card mb-4">
                            <h5 class="fw-bold mb-3">Lancer une campagne Email</h5>
                            <form action="/entreprise/envoyer-campagne" method="POST">
                                <div class="mb-3">
                                    <label class="small fw-bold text-muted">Type de questionnaire</label>
                                    <select class="form-select rounded-3" name="type_activite" id="survey-type-selector">
                                        <option value="G√©n√©ral">G√©n√©ral</option>
                                        <option value="Restaurant">Restaurant</option>
                                        <option value="H√¥tel">H√¥tel</option>
                                        <option value="Magasin">Magasin</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="small fw-bold text-muted">Liste d'emails (s√©par√©s par des virgules)</label>
                                    <textarea name="emails" class="form-control rounded-3" rows="3" placeholder="client1@email.com, client2@email.com..." required></textarea>
                                </div>
                                <button class="btn btn-success w-100 rounded-pill fw-bold shadow-sm">
                                    <i class="bi bi-send-fill me-2"></i>Envoyer la campagne
                                </button>
                            </form>
                        </div>
                        <div class="glass-card">
                            <h5 class="fw-bold mb-3">Derni√®res r√©ponses</h5>
                            <div class="list-group list-group-flush" style="max-height: 300px; overflow-y: auto;">
                                <% if(sondages && sondages.length > 0) { %>
                                    <% sondages.forEach(s => { 
                                        const rep = s.reponses;
                                        let starSum = 0, starCount = 0, comment = "";
                                        for(let key in rep) {
                                            if(!['entreprise_id', 'entreprise_nom', 'type_activite'].includes(key)) {
                                                const val = rep[key];
                                                if(!isNaN(val) && val >= 1 && val <= 5) { starSum += parseInt(val); starCount++; }
                                                else if(typeof val === 'string' && val.length > 3) { comment = val; }
                                            }
                                        }
                                        let avg = starCount > 0 ? (starSum / starCount).toFixed(1) : null;
                                    %>
                                        <div class="list-group-item bg-transparent border-bottom py-3">
                                            <div class="d-flex justify-content-between mb-1">
                                                <span class="badge bg-light text-dark border"><%= s.type_activite %></span>
                                                <small class="text-muted"><%= new Date(s.created_at).toLocaleDateString() %></small>
                                            </div>
                                            <% if(avg) { %><div class="text-warning h5 fw-bold mb-1"><%= avg %> ‚òÖ</div><% } %>
                                            <% if(comment) { %><div class="small text-muted fst-italic">"<%= comment %>"</div><% } %>
                                        </div>
                                    <% }) %>
                                <% } else { %>
                                    <p class="text-muted small text-center py-3">Aucune r√©ponse pour l'instant.</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="academie">
                <div class="glass-card">

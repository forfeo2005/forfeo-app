<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Espace Pro | FORFEO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/premium-dashboard.css">
</head>
<body>
    <div class="premium-bg"></div>
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h3 class="fw-bold">Bonjour, <%= userName %> üëã</h3>
            <div class="d-flex gap-2">
                <a href="/profil" class="btn btn-outline-primary btn-sm rounded-pill">Profil</a>
                <a href="/logout" class="btn btn-danger btn-sm rounded-pill">D√©connexion</a>
            </div>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-lg-8">
                <div class="glass-card h-100">
                    <h2 class="fw-bold mb-1">Tableau de Bord</h2>
                    <p class="text-muted">G√©rez vos audits myst√®res et sondages clients.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="glass-card h-100 bg-white text-center border border-primary">
                    <h5 class="fw-bold">Passez au niveau sup√©rieur</h5>
                    <a href="https://buy.stripe.com/7sY4gAbPs9graUw65Ed7q0a" class="btn btn-flash-pro w-100 py-3 rounded-pill mt-3 shadow-lg">
                        ‚ö° PASSER PRO (149$) ‚ö°
                    </a>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-4">
                
                <div class="glass-card mb-4">
                    <h5 class="fw-bold mb-3"><i class="bi bi-incognito text-primary"></i> Nouvel Audit Myst√®re</h5>
                    <form action="/entreprise/creer-audit" method="POST">
                        <input type="text" name="titre" placeholder="Lieu (ex: Magasin Laval)" class="form-control mb-2" required>
                        <select name="type_audit" class="form-select mb-2">
                            <option>Audit Standard (Accueil)</option>
                            <option>Audit Propret√©</option>
                            <option>Audit T√©l√©phonique</option>
                        </select>
                        <input type="text" name="recompense" placeholder="R√©compense (ex: 50)" class="form-control mb-3" required>
                        <button class="btn btn-primary w-100 rounded-pill">Publier l'Audit</button>
                    </form>
                </div>

                <div class="glass-card border border-info">
                    <h5 class="fw-bold mb-3"><i class="bi bi-chat-left-text text-info"></i> Commander un Sondage</h5>
                    <p class="small text-muted">Un ambassadeur contactera votre client en votre nom.</p>
                    <form action="/entreprise/commander-sondage" method="POST">
                        <input type="text" name="client_nom" placeholder="Nom du Client" class="form-control mb-2" required>
                        <input type="email" name="client_email" placeholder="Email du Client" class="form-control mb-2" required>
                        <select name="type_sondage" class="form-select mb-2">
                            <option value="Sondage Satisfaction">Sondage Satisfaction</option>
                            <option value="Sondage Qualit√© Service">Qualit√© Service</option>
                            <option value="Sondage Apr√®s-Vente">Suivi Apr√®s-Vente</option>
                        </select>
                        <input type="text" name="recompense" placeholder="R√©compense Ambassadeur (ex: 20)" class="form-control mb-3" required>
                        <button class="btn btn-info text-white w-100 rounded-pill">Commander</button>
                    </form>
                </div>

                <div class="glass-card mt-4">
                    <h6 class="fw-bold"><i class="bi bi-person-plus"></i> Inscrire Employ√©</h6>
                    <form action="/entreprise/ajouter-employe" method="POST" class="mt-2">
                        <input type="email" name="email" placeholder="Email" class="form-control mb-2 form-control-sm" required>
                        <input type="password" name="password" placeholder="Mot de passe" class="form-control mb-2 form-control-sm" required>
                        <button class="btn btn-dark w-100 rounded-pill btn-sm">Ajouter</button>
                    </form>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="glass-card mb-4">
                    <h5 class="fw-bold mb-3">Historique (Audits & Sondages)</h5>
                    <table class="premium-table">
                        <thead><tr><th>Mission</th><th>Type</th><th>Statut</th><th>Rapport</th></tr></thead>
                        <tbody>
                            <% missions.forEach(m => { %>
                                <tr>
                                    <td class="fw-bold">
                                        <%= m.titre %> 
                                        <% if(m.client_email) { %><br><span class="text-muted small"><i class="bi bi-envelope"></i> <%= m.client_email %></span><% } %>
                                    </td>
                                    <td><%= m.type_audit %></td>
                                    <td><span class="badge-status <%= m.statut %>"><%= m.statut %></span></td>
                                    <td>
                                        <% if(m.statut === 'approuve') { %>
                                            <a href="/entreprise/telecharger-rapport/<%= m.id %>" class="btn btn-sm btn-outline-primary rounded-pill">
                                                <i class="bi bi-download"></i> PDF
                                            </a>
                                        <% } else { %>
                                            <span class="text-muted small">--</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>

                <div class="glass-card">
                    <h5 class="fw-bold mb-3">R√©sultats Acad√©mie (Employ√©s)</h5>
                    <table class="premium-table">
                        <thead><tr><th>Employ√©</th><th>Module</th><th>Note</th><th>√âtat</th></tr></thead>
                        <tbody>
                            <% employeesScores.forEach(s => { %>
                                <tr>
                                    <td class="fw-bold"><%= s.nom %></td>
                                    <td><%= s.titre %></td>
                                    <td><span class="text-primary fw-bold"><%= Math.round((s.meilleur_score/15)*100) %>%</span></td>
                                    <td><% if(s.statut === 'reussi') { %><span class="badge bg-success">Certifi√©</span><% } else { %>En cours<% } %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

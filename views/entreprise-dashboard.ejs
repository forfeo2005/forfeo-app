        <% } %>

        <ul class="nav nav-pills mb-4 gap-3 p-2 glass-card d-inline-flex flex-wrap shadow-sm rounded-4" id="dashboardTabs" role="tablist">
            <li class="nav-item"><button class="nav-link active rounded-pill fw-bold px-4" id="missions-tab" data-bs-toggle="tab" data-bs-target="#missions">Audits & Missions</button></li>
            <li class="nav-item"><button class="nav-link rounded-pill fw-bold px-4" id="campagnes-tab" data-bs-toggle="tab" data-bs-target="#campagnes">Campagnes & Sondages</button></li>
            <li class="nav-item"><button class="nav-link rounded-pill fw-bold px-4" id="academie-tab" data-bs-toggle="tab" data-bs-target="#academie">Suivi Acad√©mie</button></li>
            <li class="nav-item"><button class="nav-link rounded-pill fw-bold px-4" id="employes-tab" data-bs-toggle="tab" data-bs-target="#employes">Gestion Employ√©s</button></li>
        </ul>

        <div class="tab-content">
            
            <div class="tab-pane fade show active" id="missions">
                <div class="row g-4">
                    <div class="col-lg-4">
                        <% 
                            // LOGIQUE DE VERROUILLAGE : 
                            // Si Freemium ET + de 0 missions cr√©√©es => BLOQU√â
                            const isLocked = user.forfait === 'Freemium' && missions.length >= 1; 
                        %>
                        
                        <div class="glass-card mb-4 position-relative overflow-hidden <%= isLocked ? 'locked-overlay' : '' %>">
                            <% if(isLocked) { %>
                                <div class="lock-icon"><i class="bi bi-lock-fill"></i></div>

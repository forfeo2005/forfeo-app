<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Espace Qualit√© | FORFEO LAB</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body { background: #f4f7fb; font-family: 'Inter', sans-serif; }
        .glass-card { background: white; border: none; border-radius: 20px; box-shadow: 0 4px 15px rgba(0,0,0,0.05); }
        @media (max-width: 768px) {
            table thead { display: none; }
            table tr { display: block; background: white; margin-bottom: 1rem; border-radius: 15px; padding: 15px; }
            table td { display: flex; justify-content: space-between; border: none !important; padding: 8px 0; }
            table td::before { content: attr(data-label); font-weight: bold; }
        }
    </style>
</head>
<body>
    <nav class="navbar bg-white border-bottom px-4 py-3 sticky-top">
        <a class="navbar-brand fw-bold text-primary" href="/">FORFEO LAB</a>
        <div class="d-flex align-items-center gap-2">
            <span class="badge bg-light text-primary rounded-pill">Plan: <%= stats.forfait %></span>
            <a href="/logout" class="btn btn-outline-danger btn-sm rounded-pill">Quitter</a>
        </div>
    </nav>

    <div class="container py-4">
        <div class="row mb-4 align-items-center">
            <div class="col-8"><h3 class="fw-bold mb-0">Votre Espace Qualit√© üöÄ</h3></div>
            <div class="col-4 text-end">
                <% if (stats.canPublish) { %>
                    <button class="btn btn-primary rounded-pill px-4 fw-bold shadow" data-bs-toggle="modal" data-bs-target="#modalMission">
                        <i class="bi bi-plus-lg"></i> Cr√©er
                    </button>
                <% } else { %>
                    <a href="/forfaits" class="btn btn-warning rounded-pill px-3 fw-bold small shadow-sm">Upgrade Premium</a>
                <% } %>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-8">
                <div class="glass-card p-4">
                    <h5 class="fw-bold mb-4">Missions r√©centes</h5>
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead><tr><th>MISSION</th><th>PRIX</th><th>STATUT</th><th class="text-end">ACTIONS</th></tr></thead>
                            <tbody>
                                <% missions.forEach(m => { %>
                                    <tr>
                                        <td data-label="Mission"><strong><%= m.titre %></strong></td>
                                        <td data-label="Prix"><%= m.recompense %></td>
                                        <td data-label="Statut"><span class="badge rounded-pill <%= m.statut === 'approuve' ? 'bg-success' : 'bg-warning' %>"><%= m.statut %></span></td>
                                        <td data-label="Actions" class="text-end">
                                            <% if(m.statut === 'approuve') { %>
                                                <a href="/entreprise/telecharger-rapport/<%= m.id %>" class="btn btn-sm btn-outline-danger"><i class="bi bi-file-pdf"></i></a>
                                            <% } else { %><small class="text-muted">---</small><% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="glass-card p-4 text-center">
                    <h6 class="fw-bold mb-4">R√©partition des Statuts</h6>
                    <canvas id="statusChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalMission" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content p-4 rounded-4 border-0">
                <h5 class="fw-bold mb-4">Nouvel Audit Myst√®re</h5>
                <form action="/creer-mission" method="POST">
                    <input type="text" name="titre" class="form-control mb-3" placeholder="Titre de la mission" required>
                    <input type="text" name="type_mission" class="form-control mb-3" placeholder="Type (ex: Restauration)" required>
                    <textarea name="description" class="form-control mb-3" rows="4" placeholder="Consignes..." required></textarea>
                    <input type="text" name="recompense" class="form-control mb-4" placeholder="R√©compense (ex: 50$)" required>
                    <button type="submit" class="btn btn-primary w-100 rounded-pill py-2 fw-bold">Publier</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        new Chart(document.getElementById('statusChart'), {
            type: 'doughnut',
            data: { labels: ['Actif', 'Pay√©'], datasets: [{ data: [<%= missions.filter(m=>m.statut!=='approuve').length %>, <%= missions.filter(m=>m.statut==='approuve').length %>], backgroundColor: ['#ffc107', '#198754'] }] },
            options: { cutout: '80%', plugins: { legend: { position: 'bottom' } } }
        });
    </script>
</body>
</html>

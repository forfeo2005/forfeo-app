<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Espace Pro | FORFEO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/premium-dashboard.css">
    <link rel="stylesheet" href="/css/home-premium.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .profile-logo { width: 50px; height: 50px; border-radius: 50%; object-fit: cover; border: 2px solid #0061ff; }
    </style>
</head>
<body>
    <div class="premium-bg"></div>
    <div class="container py-5">
        
        <% if (typeof error !== 'undefined' && error === 'limit_atteinte') { %>
            <div class="alert alert-warning text-center fw-bold shadow mb-4">⚠️ Limite Freemium atteinte.</div>
        <% } %>
        <% if (typeof error !== 'undefined' && error === 'email_fail') { %>
            <div class="alert alert-danger text-center fw-bold shadow mb-4">❌ Erreur d'envoi. Vérifiez les paramètres SMTP.</div>
        <% } %>
        <% if (typeof msg !== 'undefined' && msg === 'campagne_envoyee') { %>
            <div class="alert alert-success text-center fw-bold shadow mb-4"><i class="bi bi-send-check-fill me-2"></i>Campagne envoyée avec succès !</div>
        <% } %>

        <div class="d-flex justify-content-between align-items-center mb-5 flex-wrap gap-3">
            <div class="d-flex align-items-center gap-3">
                <% if(user.logo_data) { %>
                    <img src="<%= user.logo_data %>" class="profile-logo shadow-sm" alt="Logo">
                <% } else { %>
                    <div class="bg-white rounded-circle d-flex align-items-center justify-content-center border" style="width:50px; height:50px;"><i class="bi bi-shop h4 mb-0 text-primary"></i></div>
                <% } %>
                <h3 class="fw-bold mb-0">Bonjour, <%= userName %></h3>
            </div>

            <form action="/entreprise/upload-logo" method="POST" enctype="multipart/form-data" class="d-flex gap-2 align-items-center bg-white p-2 rounded-pill shadow-sm">
                <input type="file" name="logo" class="form-control form-control-sm rounded-pill border-0" required style="width: 180px;">
                <button class="btn btn-sm btn-dark rounded-pill px-3">Sauvegarder</button>
            </form>

            <div class="d-flex gap-2">
                <a href="/profil" class="btn btn-outline-primary btn-sm rounded-pill">Profil</a>
                <a href="/logout" class="btn btn-danger btn-sm rounded-pill">Déconnexion</a>
            </div>
        </div>

        <% if(user.forfait === 'Freemium') { %>
            <h4 class="fw-bold mb-4 text-center">Nos Forfaits PRO</h4>
            <div class="row g-4 mb-5">
                <div class="col-md-4"><div class="card h-100 border-0 shadow-sm p-4 text-center"><h5 class="fw-bold">Découverte</h5><h2 class="text-primary fw-bold">49$</h2><a href="#" class="btn btn-outline-primary w-100 rounded-pill mt-3">Choisir</a></div></div>
                <div class="col-md-4"><div class="card h-100 border-primary shadow p-4 text-center" style="transform: scale(1.05);"><div class="badge bg-primary position-absolute top-0 start-50 translate-middle">Populaire</div><h5 class="fw-bold mt-2">Découverte+</h5><h2 class="text-primary fw-bold">119$</h2><a href="#" class="btn btn-primary w-100 rounded-pill mt-3">Choisir</a></div></div>
                <div class="col-md-4"><div class="card h-100 border-0 shadow-sm p-4 text-center"><h5 class="fw-bold">Croissance</h5><h2 class="text-primary fw-bold">69$<small>/mois</small></h2><a href="#" class="btn btn-outline-primary w-100 rounded-pill mt-3">S'abonner</a></div></div>
            </div>
        <% } %>

        <ul class="nav nav-pills mb-4 gap-3 p-2 glass-card d-inline-flex flex-wrap" role="tablist">
            <li class="nav-item"><button class="nav-link active rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#missions">Audits & Missions</button></li>
            <li class="nav-item"><button class="nav-link rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#campagnes">Campagnes & Sondages</button></li>
            <li class="nav-item"><button class="nav-link rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#academie">Suivi Académie</button></li>
            <li class="nav-item"><button class="nav-link rounded-pill fw-bold" data-bs-toggle="tab" data-bs-target="#employes">Gestion Employés</button></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade show active" id="missions">
                <div class="row g-4">
                    <div class="col-lg-4">
                        <div class="glass-card mb-4">
                            <h5 class="fw-bold">Publier Audit Terrain</h5>
                            <form action="/entreprise/creer-audit" method="POST">
                                <input type="text" name="titre" placeholder="Lieu" class="form-control mb-2" required>
                                <input type="text" name="adresse" placeholder="Adresse" class="form-control mb-2" required>
                                <select name="type_audit" class="form-select mb-2"><option>Audit Standard</option><option>Audit Qualité</option></select>
                                <input type="text" name="recompense" placeholder="Récompense ($)" class="form-control mb-2" required>
                                <button class="btn btn-primary w-100">Publier</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-8"><div class="glass-card"><h5 class="fw-bold">Historique</h5><table class="premium-table"><% missions.forEach(m => { %><tr><td><%= m.titre %></td><td><span class="badge bg-secondary"><%= m.statut %></span></td><td><% if(m.statut === 'approuve'){ %><a href="/entreprise/telecharger-rapport/<%= m.id %>" class="btn btn-sm btn-outline-success">PDF</a><% } %></td></tr><% }) %></table></div></div>
                </div>
            </div>

            <div class="tab-pane fade" id="campagnes">
                <div class="row g-4">
                    <div class="col-lg-5">
                        <div class="glass-card h-100 border-primary border-2 shadow-lg text-center">
                            <h4 class="fw-bold mb-3 text-primary">QR Code Intelligent</h4>
                            <div class="bg-white p-4 rounded-4 border d-inline-block mb-3">
                                <img id="dynamic-qr" src="https://api.qrserver.com/v1/create-qr-code/?size=180x180&data=<%= encodeURIComponent(surveyBaseLink + '?type=Général') %>" class="img-fluid">
                            </div>
                            <div class="input-group">
                                <input type="text" id="dynamic-link" class="form-control form-control-sm bg-light" value="<%= surveyBaseLink %>?type=Général" readonly>
                                <button class="btn btn-outline-secondary btn-sm" onclick="copyLink()"><i class="bi bi-clipboard"></i></button>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <div class="glass-card mb-4">
                            <h5 class="fw-bold mb-3">Lancer une campagne</h5>
                            <form action="/entreprise/envoyer-campagne" method="POST">
                                <div class="mb-3">
                                    <select class="form-select" name="type_activite" id="survey-type-selector">
                                        <option value="Général">Général</option>
                                        <option value="Restaurant">Restaurant</option>
                                        <option value="Hôtel">Hôtel</option>
                                        <option value="Magasin">Magasin</option>
                                    </select>
                                </div>
                                <div class="mb-3"><textarea name="emails" class="form-control" rows="3" placeholder="Emails clients..." required></textarea></div>
                                <button class="btn btn-success w-100 rounded-pill">Envoyer</button>
                            </form>
                        </div>
                        <div class="glass-card">
                            <h5 class="fw-bold mb-3">Réponses reçues</h5>
                            <div class="list-group list-group-flush" style="max-height: 300px; overflow-y: auto;">
                                <% if(sondages && sondages.length > 0) { %>
                                    <% sondages.forEach(s => { 
                                        const rep = s.reponses;
                                        let displayRep = "Non précisé";
                                        for(let key in rep) { 
                                            if(!['entreprise_id', 'entreprise_nom', 'type_activite'].includes(key)) {
                                                if(key === 'comment_gen' && rep[key]) { displayRep = rep[key]; break; }
                                                if(rep[key] && displayRep === "Non précisé") { displayRep = rep[key]; }
                                            }
                                        }
                                    %>
                                        <div class="list-group-item bg-transparent"><small><%= new Date(s.created_at).toLocaleDateString() %></small> <strong><%= displayRep %></strong></div>
                                    <% }) %>
                                <% } else { %>
                                    <p class="text-muted small text-center">Aucune réponse.</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="academie">
                <div class="glass-card"><h5 class="fw-bold">Performance</h5><table class="premium-table"><% scores.forEach(s => { %><tr><td><%= s.employe_nom %></td><td><%= s.module_titre %></td><td><%= s.statut %></td></tr><% }) %></table></div>
            </div>

            <div class="tab-pane fade" id="employes">
                <div class="glass-card"><h5 class="fw-bold">Ajout Employé</h5><form action="/entreprise/ajouter-employe" method="POST"><input type="text" name="nom" class="form-control mb-2" placeholder="Nom"><input type="email" name="email" class="form-control mb-2" placeholder="Email"><input type="password" name="password" class="form-control mb-2" placeholder="Pass"><button class="btn btn-success w-100">Créer</button></form></div>
            </div>
        </div>
    </div>
    <%- include('partials/forfy') %>
    <script>
        function copyLink() {
            const el = document.getElementById("dynamic-link"); el.select(); navigator.clipboard.writeText(el.value); alert("Copié !");
        }
        const base = "<%= typeof surveyBaseLink !== 'undefined' ? surveyBaseLink : '' %>";
        const sel = document.getElementById('survey-type-selector');
        const img = document.getElementById('dynamic-qr');
        const inp = document.getElementById('dynamic-link');
        if(sel && img) {
            sel.addEventListener('change', function() {
                const url = base + "?type=" + encodeURIComponent(this.value);
                img.src = `https://api.qrserver.com/v1/create-qr-code/?size=180x180&data=${encodeURIComponent(url)}`;
                inp.value = url;
            });
        }
    </script>
</body>
</html>

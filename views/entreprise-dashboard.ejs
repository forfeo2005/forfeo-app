<!DOCTYPE html>
<html lang="fr-CA">
<head>
    <meta charset="UTF-8">
    <title>FORFEO - Espace Entreprise</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>body { background: #f8fafc; padding: 40px; }</style>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-between mb-5">
            <h2 class="fw-bold text-primary">Tableau de Bord Pro</h2>
            <a href="/logout" class="btn btn-outline-danger btn-sm">Déconnexion</a>
        </div>

        <div class="row">
            <div class="col-md-5">
                <button class="btn btn-primary w-100 mb-4" data-bs-toggle="modal" data-bs-target="#modalMission">Nouvel Audit</button>
                <h5>Mes Missions</h5>
                <% missions.forEach(m => { %>
                    <div class="card p-2 mb-2 small"><%= m.titre %> - <strong><%= m.statut %></strong></div>
                <% }) %>
            </div>
            <div class="col-md-7">
                <h5>Rapports d'Audit Reçus</h5>
                <% rapports.forEach(r => { %>
                    <div class="card p-4 mb-3 shadow-sm border-0">
                        <div class="d-flex justify-content-between">
                            <h6 class="fw-bold"><%= r.titre %></h6>
                            <span class="badge bg-warning text-dark">Note : <%= r.note %>/5</span>
                        </div>
                        <p class="small text-muted mt-2"><%= r.contenu %></p>
                        <div class="small fw-bold">Par : <%= r.ambassadeur %></div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalMission" tabindex="-1">
        <div class="modal-dialog">
            <form action="/creer-mission" method="POST" class="modal-content p-4">
                <h5>Nouvelle Mission</h5>
                <input type="text" name="titre" class="form-control mb-2" placeholder="Titre" required>
                <textarea name="description" class="form-control mb-2" placeholder="Description"></textarea>
                <input type="text" name="recompense" class="form-control mb-3" placeholder="Récompense">
                <button class="btn btn-primary">Publier</button>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

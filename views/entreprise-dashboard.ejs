<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Espace Pro | FORFEO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/premium-dashboard.css">
</head>
<body>
    <div class="premium-bg"></div>
    <div class="container py-5">
        <% if (typeof error !== 'undefined' && error === 'limit_atteinte') { %>
            <div class="alert alert-warning text-center fw-bold shadow mb-4">⚠️ Limite Freemium atteinte. <a href="/entreprise/upgrade">Passez PRO !</a></div>
        <% } %>

        <div class="d-flex justify-content-between mb-5 align-items-center">
            <h3 class="fw-bold">Bonjour, <%= userName %></h3>
            <div class="d-flex flex-column align-items-center">
                <img src="/images/logo-forfeo.png" height="40">
                <span class="brand-lab-neon">LAB</span>
            </div>
            <a href="/logout" class="btn btn-danger btn-sm rounded-pill">Déconnexion</a>
        </div>

        <div class="row g-4">
            <div class="col-lg-4">
                <div class="glass-card mb-4 bg-white border-primary border">
                    <h5 class="fw-bold text-center">Forfait : <%= user.forfait %></h5>
                    <% if(user.forfait === 'Freemium') { %><a href="/entreprise/upgrade" class="btn btn-flash-pro w-100 py-3 rounded-pill mt-3 shadow">⚡ PASSER PRO (149$) ⚡</a><% } %>
                </div>
                <div class="glass-card mb-4">
                    <h5 class="fw-bold">Publier Audit</h5>
                    <form action="/entreprise/creer-audit" method="POST">
                        <input type="text" name="titre" placeholder="Lieu" class="form-control mb-2" required>
                        <input type="text" name="adresse" placeholder="Adresse" class="form-control mb-2" required>
                        <select name="type_audit" class="form-select mb-2"><option>Audit Standard</option><option>Audit Qualité</option></select>
                        <input type="text" name="recompense" placeholder="Récompense ($)" class="form-control mb-2" required>
                        <button class="btn btn-primary w-100">Publier</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="glass-card">
                    <h5 class="fw-bold">Historique</h5>
                    <table class="premium-table">
                        <thead><tr><th>Mission</th><th>Statut</th><th>Rapport</th></tr></thead>
                        <tbody>
                            <% missions.forEach(m => { %>
                                <tr>
                                    <td><%= m.titre %></td>
                                    <td><span class="badge bg-secondary"><%= m.statut %></span></td>
                                    <td><% if(m.statut === 'approuve') { %><a href="/entreprise/telecharger-rapport/<%= m.id %>" class="btn btn-sm btn-outline-success">PDF</a><% } %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <%- include('partials/forfy') %>
</body>
</html>

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Détail Rapport | Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/premium-dashboard.css">
</head>
<body>
    <div class="premium-bg"></div>
    <div class="container py-5" style="max-width: 800px;">
        <a href="/admin/dashboard" class="btn btn-outline-secondary btn-sm rounded-pill mb-4">← Retour</a>

        <div class="glass-card mb-4">
            <div class="d-flex justify-content-between">
                <div>
                    <h6 class="text-muted small fw-bold">Rapport d'Audit</h6>
                    <h2 class="fw-bold text-primary"><%= rapport.titre %></h2>
                    <span class="badge bg-info text-dark"><%= rapport.type_audit %></span>
                </div>
                <div class="text-end">
                    <small>Réalisé par</small>
                    <div class="fw-bold"><%= rapport.ambassadeur_nom %></div>
                </div>
            </div>
            <hr class="my-4">
            
            <h5 class="fw-bold mb-3">Contenu</h5>
            <div class="bg-white p-4 rounded-3 border">
                <% 
                const labelMap = {
                    'nom_ambassadeur': 'Ambassadeur', 'nom_entreprise': 'Lieu Visité', 'date_visite': 'Date',
                    'type_experience': 'Type', 'description': 'Description Générale', 'points_forts': 'Points Forts',
                    'points_ameliorer': 'À Améliorer', 'note_globale': 'Note /10', 'accueil': 'Accueil',
                    'proprete': 'Propreté', 'vitesse': 'Vitesse', 'commentaire_detaille': 'Détails',
                    'niveau_satisfaction': 'Satisfaction', 'fluidite': 'Fluidité', 'commentaire_libre': 'Avis Client'
                };
                %>
                <% if (details) { %>
                    <% for (const [key, value] of Object.entries(details)) { %>
                        <div class="mb-3">
                            <label class="small text-muted fw-bold text-uppercase">
                                <%= labelMap[key] || key %>
                            </label>
                            <div class="fs-5"><%= value %></div>
                        </div>
                    <% } %>
                <% } else { %>
                    <p class="text-danger">Erreur de lecture.</p>
                <% } %>
            </div>
        </div>

        <div class="glass-card d-flex justify-content-between align-items-center">
            <div><h6 class="fw-bold m-0">Décision</h6><small>Publier ou Rejeter ?</small></div>
            <div class="d-flex gap-2">
                <form action="/admin/rejeter-rapport" method="POST" onsubmit="return confirm('Rejeter ce rapport ?');">
                    <input type="hidden" name="id_mission" value="<%= rapport.mission_id %>">
                    <button class="btn btn-outline-danger rounded-pill px-4">Rejeter</button>
                </form>
                <form action="/admin/approuver-mission" method="POST">
                    <input type="hidden" name="id_mission" value="<%= rapport.mission_id %>">
                    <button class="btn btn-success rounded-pill px-4 fw-bold">Approuver</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

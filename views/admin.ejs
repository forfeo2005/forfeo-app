<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Console Master | Forfeo Lab</title>
    <style>
        :root { --primary: #00aaff; --dark: #050505; --glass: rgba(255, 255, 255, 0.03); --danger: #ff4d4d; --success: #00ff88; }
        body { margin: 0; font-family: 'Inter', sans-serif; background: var(--dark); color: white; overflow-x: hidden; }

        /* Loader Scanner Uniformisé */
        #loader { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: var(--dark); z-index: 9999; display: flex; flex-direction: column; align-items: center; justify-content: center; transition: opacity 0.5s; }
        .scanner { width: 250px; height: 3px; background: var(--primary); box-shadow: 0 0 25px var(--primary); animation: scan 2.5s infinite ease-in-out; }
        @keyframes scan { 0%, 100% { transform: translateY(-60px); opacity: 0.2; } 50% { transform: translateY(60px); opacity: 1; } }

        nav { position: fixed; top: 0; width: 100%; padding: 20px; display: flex; justify-content: center; gap: 40px; background: rgba(0,0,0,0.9); backdrop-filter: blur(10px); z-index: 1000; border-bottom: 1px solid rgba(255,255,255,0.1); }
        nav a { color: white; text-decoration: none; font-weight: 500; font-size: 13px; letter-spacing: 2px; opacity: 0.6; transition: 0.3s; }
        nav a:hover { opacity: 1; color: var(--primary); }

        .admin-container { padding: 120px 40px 60px; max-width: 1400px; margin: 0 auto; }
        .header-admin { display: flex; justify-content: space-between; align-items: center; margin-bottom: 40px; border-bottom: 1px solid rgba(255,255,255,0.05); padding-bottom: 20px; }
        
        .stats-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; margin-bottom: 40px; }
        .stat-card { background: var(--glass); border: 1px solid rgba(255,255,255,0.05); padding: 25px; border-radius: 15px; text-align: center; }
        .stat-card h3 { margin: 0; font-size: 2rem; color: var(--primary); }
        .stat-card p { margin: 5px 0 0; opacity: 0.5; font-size: 12px; text-transform: uppercase; letter-spacing: 1px; }

        .section-card { background: var(--glass); backdrop-filter: blur(20px); border: 1px solid rgba(255,255,255,0.1); border-radius: 20px; padding: 30px; margin-bottom: 40px; }
        h2 { font-size: 1.5rem; margin-top: 0; display: flex; align-items: center; gap: 10px; }
        h2::before { content: ""; width: 4px; height: 20px; background: var(--primary); border-radius: 2px; display: inline-block; }

        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th { text-align: left; padding: 15px; font-size: 12px; color: var(--primary); text-transform: uppercase; letter-spacing: 1px; border-bottom: 1px solid rgba(255,255,255,0.1); }
        td { padding: 15px; border-bottom: 1px solid rgba(255,255,255,0.05); font-size: 14px; }
        tr:hover { background: rgba(255,255,255,0.02); }

        .status { padding: 4px 12px; border-radius: 20px; font-size: 11px; font-weight: bold; text-transform: uppercase; }
        .status-active { background: rgba(0, 255, 136, 0.1); color: var(--success); }
        .status-pending { background: rgba(255, 170, 0, 0.1); color: #ffaa00; }

        .btn-action { background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); color: white; padding: 6px 12px; border-radius: 6px; cursor: pointer; font-size: 12px; transition: 0.3s; }
        .btn-action:hover { background: var(--primary); border-color: var(--primary); }
        .btn-delete { color: var(--danger); border-color: rgba(255, 77, 77, 0.2); }
        .btn-delete:hover { background: var(--danger); color: white; }
    </style>
</head>
<body>

    <div id="loader">
        <div class="scanner"></div>
        <p style="margin-top: 40px; letter-spacing: 5px; font-size: 10px; opacity: 0.6;">ACCÈS RACINE SÉCURISÉ...</p>
    </div>

    <nav>
        <a href="/dashboard">RETOUR DASHBOARD</a>
        <a href="#ambassadeurs">AMBASSADEURS</a>
        <a href="#entreprises">ENTREPRISES</a>
        <a href="#missions">MISSIONS</a>
    </nav>

    <div class="admin-container">
        <div class="header-admin">
            <div>
                <h1 style="margin:0;">Système Central Forfeo</h1>
                <p style="opacity: 0.4; font-size: 13px;">Supervision temps-réel de l'écosystème Lab.</p>
            </div>
            <div style="text-align: right;">
                <span class="status status-active">Serveur Opérationnel</span>
            </div>
        </div>

        <div class="stats-grid">
            <div class="stat-card"><h3><%= ambassadeurs.length %></h3><p>Ambassadeurs</p></div>
            <div class="stat-card"><h3><%= entreprises.length %></h3><p>Clients Business</p></div>
            <div class="stat-card"><h3><%= missions.length %></h3><p>Audits en cours</p></div>
            <div class="stat-card"><h3>98%</h3><p>Score Qualité IA</p></div>
        </div>

        <div class="section-card" id="ambassadeurs">
            <h2>Gestion des Ambassadeurs</h2>
            <table>
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Ville</th>
                        <th>Email</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% ambassadeurs.forEach(a => { %>
                        <tr>
                            <td><strong><%= a.nom %></strong></td>
                            <td><%= a.ville %></td>
                            <td><%= a.email %></td>
                            <td><span class="status status-pending">En attente</span></td>
                            <td>
                                <button class="btn-action">Approuver</button>
                                <button class="btn-action btn-delete">Révoquer</button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <div class="section-card" id="entreprises">
            <h2>Partenaires Business</h2>
            <table>
                <thead>
                    <tr>
                        <th>Compagnie</th>
                        <th>Email</th>
                        <th>Plan Actif</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% entreprises.forEach(e => { %>
                        <tr>
                            <td><strong><%= e.nom %></strong></td>
                            <td><%= e.email %></td>
                            <td><span style="color: var(--primary);"><%= e.plan || 'Croissance' %></span></td>
                            <td>
                                <button class="btn-action">Voir Dashboard</button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

    </div>

    <script>
        window.addEventListener('load', () => {
            const loader = document.getElementById('loader');
            loader.style.opacity = '0';
            setTimeout(() => loader.style.display = 'none', 500);
        });

        document.querySelectorAll('a, button').forEach(el => {
            el.addEventListener('click', () => {
                if(el.tagName === 'A' && el.getAttribute('href').startsWith('#')) return;
                const loader = document.getElementById('loader');
                loader.style.display = 'flex';
                loader.style.opacity = '1';
            });
        });
    </script>
</body>
</html>

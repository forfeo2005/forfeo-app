<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Console Admin | Forfeo Lab</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body { background: #0a0a0a; color: white; font-family: sans-serif; padding: 40px; }
        .admin-grid { display: grid; grid-template-columns: 1fr; gap: 30px; }
        .section-card { background: #151515; border: 1px solid #333; padding: 20px; border-radius: 15px; }
        h2 { color: #00d4ff; border-bottom: 1px solid #333; padding-bottom: 10px; }
        table { width: 100%; border-collapse: collapse; margin-top: 15px; }
        th { text-align: left; color: #888; padding: 12px; border-bottom: 2px solid #222; }
        td { padding: 12px; border-bottom: 1px solid #222; }
        .status-badge { padding: 4px 10px; border-radius: 20px; font-size: 0.8rem; background: #333; }
        .btn-validate { background: #00d4ff; color: black; padding: 5px 12px; border-radius: 5px; text-decoration: none; font-weight: bold; }
    </style>
</head>
<body>
    <h1>ðŸš€ Laboratoire de ContrÃ´le Forfeo</h1>

    <div class="admin-grid">
        <div class="section-card">
            <h2>Candidatures Ambassadeurs</h2>
            <table>
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Ville</th>
                        <th>Email</th>
                        <th>Statut</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% ambassadeurs.forEach(amb => { %>
                    <tr>
                        <td><%= amb.nom %></td>
                        <td><%= amb.ville %></td>
                        <td><%= amb.email %></td>
                        <td><span class="status-badge"><%= amb.statut %></span></td>
                        <td><a href="#" class="btn-validate">Approuver</a></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <div class="section-card">
            <h2>Historique des Missions</h2>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Type</th>
                        <th>DÃ©tails</th>
                        <th>Statut</th>
                    </tr>
                </thead>
                <tbody>
                    <% missions.forEach(m => { %>
                    <tr>
                        <td>#<%= m.id %></td>
                        <td><%= m.type_mission %></td>
                        <td><%= m.details %></td>
                        <td><strong><%= m.statut %></strong></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

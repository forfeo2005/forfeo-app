<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Laboratoire de ContrÃ´le | Forfeo</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        :root {
            --primary: #00d4ff;
            --bg-dark: #0a0a0a;
            --card-bg: #151515;
            --text-dim: #888;
        }

        body {
            background-color: var(--bg-dark);
            color: white;
            font-family: 'Inter', -apple-system, sans-serif;
            margin: 0;
            padding: 40px;
        }

        .header-admin {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
        }

        h1 { font-size: 2rem; margin: 0; display: flex; align-items: center; gap: 15px; }

        .search-container {
            position: relative;
            width: 300px;
        }

        #searchInput {
            width: 100%;
            padding: 12px 20px;
            background: #222;
            border: 1px solid #333;
            border-radius: 50px;
            color: white;
            outline: none;
            transition: border-color 0.3s;
        }

        #searchInput:focus { border-color: var(--primary); }

        .admin-grid { display: grid; grid-template-columns: 1fr; gap: 40px; }

        .section-card {
            background: var(--card-bg);
            border: 1px solid #333;
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        }

        h2 {
            color: var(--primary);
            font-size: 1.4rem;
            margin-top: 0;
            margin-bottom: 25px;
            border-bottom: 1px solid #222;
            padding-bottom: 15px;
        }

        table { width: 100%; border-collapse: collapse; }

        th {
            text-align: left;
            color: var(--text-dim);
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 15px;
            border-bottom: 2px solid #222;
        }

        td { padding: 15px; border-bottom: 1px solid #222; font-size: 0.95rem; }

        .status-badge { background: #222; padding: 5px 12px; border-radius: 20px; font-size: 0.8rem; color: #ccc; }

        .status-validated { color: #00ff88; font-weight: bold; }

        .btn-approve {
            background: var(--primary);
            color: black;
            padding: 8px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: bold;
            font-size: 0.85rem;
            transition: all 0.2s ease;
            display: inline-block;
        }

        .btn-approve:hover { transform: translateY(-2px); box-shadow: 0 5px 15px rgba(0, 212, 255, 0.3); }

        tr:hover td { background: rgba(255, 255, 255, 0.02); }
    </style>
</head>
<body>

    <div class="header-admin">
        <h1>ðŸš€ Console Admin Forfeo</h1>
        <div class="search-container">
            <input type="text" id="searchInput" placeholder="Rechercher une ville ou un nom...">
        </div>
    </div>

    <div class="admin-grid">
        <div class="section-card">
            <h2>Candidatures Ambassadeurs</h2>
            <table>
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Ville</th>
                        <th>Email</th>
                        <th>Statut</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="ambassadeurTable">
                    <% ambassadeurs.forEach(amb => { %>
                    <tr class="amb-row">
                        <td><strong><%= amb.nom %></strong></td>
                        <td class="city-cell"><%= amb.ville %></td>
                        <td><%= amb.email %></td>
                        <td><span class="status-badge"><%= amb.statut %></span></td>
                        <td>
                            <% if (amb.statut === 'En attente') { %>
                                <a href="/admin/approuver/<%= amb.id %>" class="btn-approve">Approuver</a>
                            <% } else { %>
                                <span class="status-validated">âœ“ ApprouvÃ©</span>
                            <% } %>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <div class="section-card">
            <h2>Historique des Missions</h2>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Type</th>
                        <th>DÃ©tails</th>
                        <th>Statut</th>
                    </tr>
                </thead>
                <tbody>
                    <% missions.forEach(m => { %>
                    <tr>
                        <td>#<%= m.id %></td>
                        <td><%= m.type_mission %></td>
                        <td><%= m.details %></td>
                        <td><strong style="color: #00d4ff;"><%= m.statut %></strong></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // Script de recherche dynamique
        document.getElementById('searchInput').addEventListener('keyup', function() {
            let filter = this.value.toLowerCase();
            let rows = document.querySelectorAll('.amb-row');

            rows.forEach(row => {
                let text = row.innerText.toLowerCase();
                if (text.includes(filter)) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        });
    </script>

</body>
</html>
